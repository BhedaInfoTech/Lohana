@model System.Web.Mvc.HandleErrorInfo
@{
    Layout = null;
}

<hgroup class="title">
    <h1 class="error">Error.</h1>
    <h2 class="error">An error occurred while processing your request.</h2>
</hgroup>
<p>

    @{
        if (HttpContext.Current.Session["SessionInfo"] == null)
        {
            @: Your current login session has exceeded the session time configured in application.
            @: We, request you to <a href="@Url.Action("Index", "Login")">Login</a> again to proceed.
                            }
        else
        {
            @:We will work on fixing that right away.
            @:Meanwhile, you may return to <a href="@Url.Action("Index","Home")">Home</a>.
                            }
    }

</p>