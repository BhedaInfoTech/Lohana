 <script>
     $(document).ready(function () {

        $("#btnSignIn").click(function (event)
        {
            $('#frmLogin').attr("action", "/Authentication/AuthenticateUser");
            $('#frmLogin').attr("method", "POST");
            $('#frmLogin').submit();
        });
  
        $("#frmLogin").validate({


            rules: {

                "Session.UserName": { required: true },

                "Session.Password": { required: true },

            },
            messages: {

                "Session.UserName": { required: "Username is required." },

                "Session.Password": { required: "Password is required." },

            }
        });
     });

    </script>