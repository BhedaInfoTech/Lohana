@model Lohana.Models.Master.PackageViewModel
<link href="~/Content/plugin/owl.carousel/assets/owl.carousel.css" rel="stylesheet" />


<link href="~/Content/plugin/owl.carousel/assets/owl.theme.default.min.css" rel="stylesheet" />

<div class="tab-content">
    <div class="row">


        <div class="col-md-12">
            <div id="carousel-example" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.Images.Count; i++)
                    {
                        if (i == 0)
                        {
                            <li data-target="#carousel-example" data-slide-to="@i" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#carousel-example" data-slide-to="@i" class=""></li>
                        }
                    }
                </ol>
                <div class="carousel-inner" role="listbox">
                    @for (int i = 0; i < Model.Images.Count; i++)
                    {
                        if (i == 0)
                        {
                            <div class="carousel-item active">
                                <img src="~/Upload/@Model.Images[i].UniqueAttachmentId" style="width:1150px;height:250px" alt="@Model.Images[i].AttachmentName" />
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src="~/Upload/@Model.Images[i].UniqueAttachmentId" style="width:1150px;height:250px" alt="@Model.Images[i].AttachmentName">
                            </div>
                        }
                    }
                </div>
                <a class="left carousel-control" href="#carousel-example" role="button" data-slide="prev">
                    <span class="icon-prev" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#carousel-example" role="button" data-slide="next">
                    <span class="icon-next" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>



    </div>


    <div class="box box-block bg-white">
        <ul style="background-color:yellow; font-size:xx-large" class="nav nav-tabs nav-tabs-4" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" role="tab" href="#packagedetails">
                    <h5><span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span>&nbsp; Package Itinerary</h5>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" id="link1" data-toggle="tab" role="tab" href="#packagedates">
                    <h5><span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span>&nbsp; Package Dates</h5>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" id="link2" data-toggle="tab" role="tab" href="#itinerary">
                    <h5><span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span>&nbsp; Inclusions / Exclusions</h5>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" id="link3" data-toggle="tab" role="tab" href="#packagephotos">
                    <h5><span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span>&nbsp; Tour Info / Additional Info</h5>
                </a>
            </li>


        </ul>

        <div class="tab-content">

            <div class="tab-pane active" id="packagedetails" role="tabpanel">


                @foreach (var item in @Model.PackageItineraries)
                {
                    @*<div style="background-color:darkcyan; height:40%">*@
                    <div class="row">
                        <div class="col-md-2 ">
                            <div class="box box-block p-y-1 bg-info text-xs-center m-b-1" style="width:180px">
                                <span class="arrow arrow-right arrow-info">Day @item.Day</span>

                            </div>
                        </div>
                        @*<div class="col-md-1"></div>*@
                        <div class="col-md-8">

                            <div class="box box-block p-y-1 bg-primary text-xs-center m-b-1">
                                <span class="arrow arrow-right arrow-primary">@item.DayTitle</span>

                            </div>
                        </div>


                        @*<div class="box box-block p-y-1 bg-primary text-xs-center m-b-1" style="width:100px;">
                                <span class="arrow arrow-right arrow-primary">Day @item.Day</span>

                            </div> @item.DayTitle*@
                    </div>

                    @*<p style="text-align:left;color:black; font-size:x-large">Day @item.Day @item.DayTitle</p>*@


                    @*</div>*@
                    <table>
                        @*  *@
                        <tr>
                            @*<td><i class="fa fa-angle-right text-warning m-r-0-5"></i> Sight Seeing : </td>
                                <td><a class="text-black"> @Html.Raw(item.SightSeeing)</a></td>*@
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>


                            @*<td> Sight Seeing : </td>*@
                            <td><a class="text-black"><strong> @Html.Raw(item.SightSeeing)</strong></a></td>
                        </tr>

                    </table><br>

                    <table>
                        <tr>


                            <td><i style="color:darkcyan" class="fa fa-cutlery"></i> Meal: </td>

                            <td><strong> @item.MealName</strong></td>

                        </tr>

                    </table>
                    <br />


                    foreach (var itemhotel in @item.PackageItineraryHotels)
                    {

                        <table>
                            <tr>
                               @if (@itemhotel.HotelName != null)
                               { 
                                <td><i style="color:darkcyan" class="fa fa-hotel"></i> Hotel Name : </td>
                                <td><a class="text-black"><strong>@itemhotel.HotelName</strong></a></td>
                                <td>&nbsp;</td>
                                <td><i class="fa fa-angle-right text-warning m-r-0-5"></i> Location : </td>

                                <td><strong>@itemhotel.Location</strong></td>
                               }
                            </tr>

                        </table>
                        <br />


                    }

                    foreach (var itemflight in @item.PackageItineraryFlights)
                    {

                        <table>
                            <tr>
                                     @if (@itemflight.FlightName != null)
                                     { 
                                <td><i style="color:darkcyan" class="fa fa-plane"></i> Flight Name : </td>
                                <td><a class="text-black"><strong>@itemflight.FlightName</strong></a></td>
                                <td>&nbsp;</td>

                                <td><i class="fa fa-angle-right text-warning m-r-0-5"></i> Flight From : </td>
                                <td><a class="text-black"><strong>@itemflight.FlightFrom</strong></a></td>
                                <td>&nbsp;</td>

                                <td><i class="fa fa-angle-right text-warning m-r-0-5"></i> Flight To : </td>
                                <td><a class="text-black"><strong>@itemflight.FlightTo</strong></a></td>
                                <td>&nbsp;</td>

                                <td><i class="fa fa-angle-right text-warning m-r-0-5"></i>Flight Time: </td>
                                <td><a class="text-black"><strong>@itemflight.FlightTime.ToShortTimeString()</strong></a></td>
                                     }
                            </tr>

                        </table>
                        <br />


                    }


                    foreach (var itemtrain in @item.PackageItineraryTrains)
                    {

                        <table>
                            <tr>
                                @if (@itemtrain.TrainName!=null)
                                { 
                                <td><i style="color:darkcyan" class="fa fa-train"></i> Train Name : </td>
                                <td><a class="text-black"><strong>@itemtrain.TrainName</strong></a></td>
                                <td>&nbsp;</td>

                                <td><i class="fa fa-angle-right text-warning m-r-0-5"></i> Train From : </td>
                                <td><a class="text-black"><strong>@itemtrain.TrainFrom</strong></a></td>
                                <td>&nbsp;</td>

                                <td><i class="fa fa-angle-right text-warning m-r-0-5"></i> Train To : </td>
                                <td><a class="text-black"><strong>@itemtrain.TrainTo</strong></a></td>
                                <td>&nbsp;</td>

                                <td><i class="fa fa-angle-right text-warning m-r-0-5"></i>Train Time: </td>
                                <td><strong>@itemtrain.TrainTime.ToShortTimeString()</strong></td>
                                }
                            </tr>

                        </table>
                        <br />


                    }

                    foreach (var itembus in @item.PackageItineraryBuses)
                    {

                        <table>
                            <tr>
                              @if (@itembus.BusName != null)
                              { 
                                <td><i style="color:darkcyan" class="fa fa-bus"></i> Bus Name : </td>
                                <td><a class="text-black"><strong>@itembus.BusName</strong></a></td>
                                <td>&nbsp;</td>

                                <td><i class="fa fa-angle-right text-warning m-r-0-5"></i> Bus From : </td>
                                <td><a class="text-black"><strong>@itembus.BusFrom</strong></a></td>
                                <td>&nbsp;</td>

                                <td><i class="fa fa-angle-right text-warning m-r-0-5"></i> Bus To : </td>
                                <td><a class="text-black"><strong>@itembus.BusTo</strong></a></td>
                                <td>&nbsp;</td>

                                <td><i class="fa fa-angle-right text-warning m-r-0-5"></i>Bus Time: </td>
                                <td><strong>@itembus.BusTime.ToShortTimeString()</strong></td>
                              }
                            </tr>


                        </table>
                        <br />


                    }

                    foreach (var itemvehicle in @item.PackageItineraryVehicles)
                    {

                        <table>
                            <tr>
                                   @if (@itemvehicle.VehicleName != null)
                                   { 
                                <td><i style="color:darkcyan" class="fa fa-car"></i> Vehicle Name : </td>
                                <td><a class="text-black"><strong>@itemvehicle.VehicleName</strong></a></td>
                                <td>&nbsp;</td>

                                <td><i class="fa fa-angle-right text-warning m-r-0-5"></i> Vehicle From : </td>
                                <td><a class="text-black"><strong>@itemvehicle.VehicleFrom</strong></a></td>
                                <td>&nbsp;</td>

                                <td><i class="fa fa-angle-right text-warning m-r-0-5"></i> Vehicle To : </td>
                                <td><a class="text-black"><strong>@itemvehicle.VehicleTo</strong></a></td>
                                <td>&nbsp;</td>

                                <td><i class="fa fa-angle-right text-warning m-r-0-5"></i>Pick Up: </td>
                                <td><strong>@itemvehicle.PickUp</strong></td>
                                <td>&nbsp;</td>

                                <td><i class="fa fa-angle-right text-warning m-r-0-5"></i>Drop Off: </td>
                                <td><strong>@itemvehicle.DropOff</strong></td>
                                <td>&nbsp;</td>

                                <td><i class="fa fa-angle-right text-warning m-r-0-5"></i>Vehicle Time: </td>
                                <td><strong>@itemvehicle.VehicleTime.ToShortTimeString()</strong></td>
                                   }
                            </tr>

                        </table>

                    }

                }





            </div>


            <div class="tab-pane" id="packagedates" role="tabpanel">
                <table border="1" cellpadding="10" cellspacing="10" style="border-color:black" width="100%" height="70%">
                    <tr>
                        <th style="background-color:darkcyan">Start Date</th>
                        <th style="background-color:darkcyan">End Date</th>
                    </tr>
                    @foreach (var item in @Model.PackageDates)
                    {


                        <tr>
                            <td style="color:black"><a class="text-black"> @item.PackageStartDate</a></td>
                            <td style="color:black"><a class="text-black"> @item.PackageEndDate</a></td>
                        </tr>
                    }
                </table>
            </div>


            <div class="tab-pane" id="itinerary" role="tabpanel">

                @*@foreach (var item in @Model.Packages)
                    {*@
                @*<ul style="color: red; font-size: large; list-style-type: none;">
                      <li><i class="fa fa-angle-right text-warning m-r-0-5"></i>Inclusions:<a class="text-black"> @Model.Package.Inclusions</a></li>

                         <li><i class="fa fa-angle-right text-warning m-r-0-5"></i>Exclusions:<a class="text-black"> @Model.Package.Exclusions</a></li>
                    </ul>*@
                <div style="color:black;border:thin;font-size:xx-large">Inclusions</div><br />
                <div style="background-color:darkcyan;border:thick ;height:auto;width:50%;color:black">
                    @Html.Raw(@Model.Package.Inclusions)
                </div>
                @*<textarea rows="10" cols="70" style="background-color:darkcyan;border:thick">
                          @Html.Raw(@Model.Package.Inclusions)
                </textarea>*@

                <div style="color: black; border: thin; font-size: xx-large; ">Exclusions</div><br />
                <div style="background-color:darkcyan;border:thick ;height:auto;width:50%">
                    @Html.Raw(@Model.Package.Exclusions)
                </div>
                @*<textarea rows="10" cols="70" style="background-color:darkcyan;border:thick">
                         @Html.Raw(@Model.Package.Exclusions)
                </textarea>*@




                @*}*@

            </div>


            <div class="tab-pane" id="packagephotos" role="tabpanel">

                @*@foreach (var item in @Model.Packages)
                    {*@
                
                <ul style="list-style:circle;color: red; font-size:medium; list-style-type: none; word-break:normal ">
                    @if(@Model.Package.PaymentTems!=null)
                    { 
                    <li class="box box-block p-y-1 bg-info text-xs-left m-b-1"><i class="fa fa-angle-right text-warning m-r-0-5"></i>PaymentTems:<a class="text-black"> @Html.Raw(@Model.Package.PaymentTems)</a></li>
                    }
                    @if(@Model.Package.TourRequirements!=null)
                    {
                    <li class="box box-block p-y-1 bg-info text-xs-left m-b-1"><i class="fa fa-angle-right text-warning m-r-0-5"></i>TourRequirements:<a class="text-black">@Html.Raw(@Model.Package.TourRequirements) @*@Model.Package.TourRequirements*@</a></li>
                    }
                    @if(@Model.Package.ThingsToCarryAlong!=null)
                    {
                    <li class="box box-block p-y-1 bg-info text-xs-left m-b-1"><i class="fa fa-angle-right text-warning m-r-0-5"></i>ThingsToCarryAlong:<a class="text-black"> @Html.Raw(@Model.Package.ThingsToCarryAlong)</a></li>
                    }
                    @if(@Model.Package.Weather!=null)
                    {
                    <li class="box box-block p-y-1 bg-info text-xs-left m-b-1"><i class="fa fa-angle-right text-warning m-r-0-5"></i>Weather:<a class="text-black">@Html.Raw(@Model.Package.Weather)</a></li>
                    }
                    @if(@Model.Package.Shopping!=null)
                    {
                    <li class="box box-block p-y-1 bg-info text-xs-left m-b-1"><i class="fa fa-angle-right text-warning m-r-0-5"></i>Shopping:<a class="text-black"> @Html.Raw(@Model.Package.Shopping)</a></li>
                    }
                    @if(@Model.Package.TermsCondition!=null)
                    {
                    <li class="box box-block p-y-1 bg-info text-xs-left m-b-1"><i class="fa fa-angle-right text-warning m-r-0-5"></i>TermsCondition:<a class="text-black">@Html.Raw(@Model.Package.TermsCondition)</a></li>
                    }
                    @if(@Model.Package.CancellationDetails!=null)
                    {
                    <li class="box box-block p-y-1 bg-info text-xs-left m-b-1"><i class="fa fa-angle-right text-warning m-r-0-5"></i>CancellationDetails:<a class="text-black">@Html.Raw(@Model.Package.CancellationDetails)</a></li>
                    }
                    @if(@Model.Package.RouteChanges!=null)
                    {
                    <li class="box box-block p-y-1 bg-info text-xs-left m-b-1"><i class="fa fa-angle-right text-warning m-r-0-5"></i>RouteChanges:<a class="text-black">@Html.Raw(@Model.Package.RouteChanges)</a></li>
                    }
                    @if(@Model.Package.DosAndDonts!=null)
                    {
                    <li class="box box-block p-y-1 bg-info text-xs-left m-b-1"><i class="fa fa-angle-right text-warning m-r-0-5"></i>DosAndDonts:<a class="text-black"> @Html.Raw(@Model.Package.DosAndDonts)</a></li>
                    }
                </ul>
                @*}*@


            </div>



        </div>

    </div>
</div>
