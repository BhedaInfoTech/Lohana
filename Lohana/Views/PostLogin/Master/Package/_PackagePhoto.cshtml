@model Lohana.Models.Master.PackageViewModel
@using LohanaBusinessEntities.Common;

<h5>Photo Description</h5>

<br />

<div class="row">
    
    <input type="hidden" name="Accessories.AttachmentName" />

    <input type="hidden" name="Accessories.AttachmentId" />

    <input type="hidden" name="Accessories.RefId" value="@Model.Package.PackageId" />

    <input type="hidden" name="Accessories.RefTypeName" value="Package">

    <input type="hidden" name="Accessories.RefType" />

    <input type="hidden" name="Accessories.RefCategory" />

    <input type="hidden" name="Accessories.UniqueAttachmentId" />

    <div class="row">
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for=""><b>Upload Photo</b></label>
                        <input type="file" class="file" data-identifier="photo" data-refcat="Upload Photo" multiple />
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12 photo">
                   
                </div>

            </div>
        </div>
    </div>
</div>

<div id="ConfirmationModel" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Confirmation Alert</h4>
            </div>
            <div class="modal-body">
                <p>Are you sure that you want to delete this image!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary removeimg">Yes</button>
            </div>
        </div>

    </div>
</div>