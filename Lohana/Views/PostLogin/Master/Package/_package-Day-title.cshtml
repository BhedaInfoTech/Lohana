@model Lohana.Models.Master.PackageViewModel

<script src="~/Scripts/Master/Package/_package-Itinarary-model.js"></script>
<script src="~/Scripts/Master/Package/_Package-Itinarary-model-method.js"></script>




<div class="tab-pane active p-a-0-75" id="gitdetails" role="tabpanel">

    <form id="frmGitDayDetails">
        <div class="row">
            <input type="hidden" id="hdnPackageDayId" name="packagedaytriff.PackageDayId" value="@Model.packagedaytriff.PackageDayId">
            <input type="hidden" id="hdnPackageId" name="packagedaytriff.PackageId" value="@Model.packagedaytriff.PackageId">

            <div class="col-md-4">
                <label for="drpCity" style="color: #333" class="">City</label>
                <div class="form-group">
                    <div class="input-group">
                        <select class="form-control" id="drpcity" name="packagedaytriff.CityId"></select>
                        <span class="input-group-addon">
                            <a href="/City/Index" target="_blank"> <i class="fa fa-globe"></i></a>
                        </span>
                    </div>
                </div>
            </div>


            <div class="col-md-4">
                <label for="">Title</label>
                <div class="input-group form-group">
                    <input type="text" class="form-control" placeholder="Enter Title" name="packagedaytriff.Title" id="txtGitTitle" maxlength="40">
                </div>
            </div>
        </div>

        <br />
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <div class="form-group">
                        <button type="button" id="btnSaveGitTitleDetails" class="btn btn-success btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button>
                        <button type="button" id="btnResetGitTitleDetails" class="btn btn-warning btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>
                    </div>
                </div>
                <div class="col-md-4"></div>
            </div>
        </div>

    </form>

</div>

