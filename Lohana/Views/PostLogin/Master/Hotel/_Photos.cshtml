@model Lohana.Models.Master.HotelViewModel
@using LohanaBusinessEntities.Common;

<h5>Photo Description</h5>

<br />
<div class="row">

	<input type="hidden" name="Accessories.AttachmentId" />

	<input type="hidden" name="Accessories.AttachmentName" />

	<input type="hidden" name="Accessories.RefId" value="@Model.Hotel.HotelId" />

	<input type="hidden" name="Accessories.RefTypeName" value="Hotel">

	<input type="hidden" name="Accessories.RefType" />

	<input type="hidden" name="Accessories.RefCategory" />

    <input type="hidden" name="Accessories.UniqueAttachmentId"/>

    <div class="row">

        <div class="col-md-4">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for=""><b>Exterior</b></label>
                        <input type="file" class="file" data-identifier="exterior" data-refcat="Exterior View" multiple />
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12 exterior">

                </div>                
            </div>            
        </div>

        <div class="col-md-4">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for=""><b>Reception</b></label>
                        <input type="file" class="file" data-identifier="lobby" data-refcat="Reception / Lobby" multiple />
                    </div>
                </div>
            </div>
            <hr/>
            <div class="row">
                <div class="col-md-12 lobby">

                </div>
            </div>          
        </div>

        <div class="col-md-4">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for=""><b>Room Types</b></label>
                        <input type="file" class="file" data-identifier="roomtypes" data-refcat="Room Type" multiple />
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12 roomtypes">
                </div>
            </div>           
        </div>

    </div>  

    <br />

    <br />

    <br />
    
    <div class="row">

        <div class="col-md-4">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for=""><b>Restaurants</b></label>
                        <input type="file" class="file" data-identifier="restaurant" data-refcat="Restaurant" multiple />
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12 restaurant">

                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for=""><b>Facilities</b></label>
                        <input type="file" class="file" data-identifier="facilities" data-refcat="Facilities" multiple />
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12 facilities">

                </div>
            </div>
        </div>

    </div>
     
</div>

<!-- Modal -->
<div id="ConfirmationModel" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Confirmation Alert</h4>
            </div>
            <div class="modal-body">
                <p>Are you sure that you want to delete this image!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary removeimg">Yes</button>
            </div>
        </div>

    </div>
</div>

