@model Lohana.Models.Master.HotelViewModel
@using LohanaBusinessEntities.Common;

<script src="~/Scripts/Master/Hotel/hotel-validations.js"></script>

<script src="~/Scripts/Master/Hotel/hotel-methods.js"></script>

<script src="~/Scripts/Master/Hotel/hotel-events.js"></script>


<div class="row">

    <form id="frmHotelBasicDetails">

        <input type="hidden" id="hdnHotelId" value="@Model.Hotel.HotelId" name="Hotel.HotelId" />

        <div class="col-md-3">
            <div class="block">

                <h5 style="margin-top: 15px;">Primary Details</h5>
                <br />

                <div class="form-group">
                    <label>Hotel Type</label>
                    <div class="input-group">
                        <select id="drphotelType" class="form-control input-sm" name="Hotel.HotelType">
                            <option value="0">Select hotel type</option>
                            @foreach (var item in Model.HotelTypes)
                            {
                                if (Model.Hotel.HotelTypeId == item.HotelTypeId)
                                {
                                    <option value="@item.HotelTypeId" selected="selected">@item.HotelType</option>
                                }
                                else
                                {
                                    <option value="@item.HotelTypeId">@item.HotelType</option>
                                }
                            }
                        </select>
                        <span class="input-group-addon">
                            <i class="fa fa-hotel"></i>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label>Hotel Name</label>
                    <div class="input-group">
                        <input type="text" id="txthotelName" class="form-control input-sm" name="Hotel.HotelName" placeholder="Enter hotel name" value="@Model.Hotel.HotelName" maxlength="50">
                        <input type="hidden" id="hdnHotelName" value="@Model.Hotel.HotelName">
                        <span class="input-group-addon">
                            <i class="fa fa-hotel"></i>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label>Hotel Group</label>
                    <div class="input-group">
                        <input type="text" id="txthotelGroup" class="form-control input-sm" name="Hotel.HotelGroup" placeholder="Enter hotel group" value="@Model.Hotel.HotelGroup" maxlength="30">
                        <span class="input-group-addon">
                            <i class="fa fa-object-group"></i>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label>Star Category</label>
                    <div class="input-group">
                        <select id="drpstarCategory" class="form-control input-sm" name="Hotel.StarCategory">
                            <option value="0">Select star category</option>
                            @foreach (var item in LookupInfo.Get_StarCategory_Type())
                            {
                                if (Model.Hotel.StarCategory == item.Key)
                                {
                                    <option value="@item.Key" selected="selected">@item.Value</option>
                                }
                                else
                                {
                                    <option value="@item.Key">@item.Value</option>
                                }
                            }
                        </select>
                        <span class="input-group-addon">
                            <i class="fa fa-star-o"></i>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label>Nearest Airport (Km)</label>
                    <div class="input-group">
                        <input type="text" id="txtnearestAirport" class="form-control input-sm" name="Hotel.NearestAirport" placeholder="Enter nearest airport" value="@Model.Hotel.NearestAirport" maxlength="30">

                        <span class="input-group-addon">
                            <i class="fa fa-plane"></i>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label>Nearest Railway Station (Km)</label>
                    <div class="input-group">
                        <input type="text" id="txtnearestRailwayStation" class="form-control input-sm" name="Hotel.NearestRailwayStation" placeholder="Enter nearest railway station" value="@Model.Hotel.NearestRailwayStation" maxlength="30">
                        <span class="input-group-addon">
                            <i class="fa fa-train"></i>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label>Nearest Landmark</label>
                    <div class="input-group">
                        <input type="text" name="Hotel.NearestLandMark" id="txtnearestLandMark" class="form-control input-sm" data-role="tagsinput" placeholder="Enter nearest landmark" value="@Model.Hotel.NearestLandMark" maxlength="50">
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <div class="input-group">
                            @if (Model.Hotel.Status == false)
                            {
                                <input class="js-switch" data-color="#1bc044" data-switchery="true" value="@Model.Hotel.Status.ToString()" name="Hotel.status" type="checkbox" id="Flag">
                            }
                            else
                            {
                                <input class="js-switch" data-color="#1bc044" data-switchery="true" value="@Model.Hotel.Status.ToString()" name="Hotel.status" type="checkbox" id="Flag" checked="checked">
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-md-3">

            <div class="block">

                <h5 style="margin-top: 15px;">Address Details</h5>
                <br />
                <div class="form-group">
                    <label for="drpCity">Location</label>
                    <div class="input-group">
                        <select class="form-control input-sm" id="drpcity" name="Hotel.CityId">
                            <option value="0">Select location</option>
                            @foreach (var item in Model.Cities)
                            {
                                if (Model.Hotel.CityId == item.CityId)
                                {
                                    <option value="@item.CityId" selected="selected">@item.CityName</option>
                                }
                                else
                                {
                                    <option value="@item.CityId">@item.CityName</option>
                                }
                            }
                        </select>
                        <span class="input-group-addon">
                            <a href="/City/Index" target="_blank"> <i class="fa fa-globe"></i></a>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label>Pincode</label>
                    <div class="input-group">
                        <input type="text" id="txtpinCode" class="form-control input-sm" maxlength="6" name="Hotel.PinCode" placeholder="Enter pin code" value="@Model.Hotel.Pincode">
                        <span class="input-group-addon">
                            <i class="fa fa-map-pin"></i>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label>Address</label>
                    <div class="input-group">
                        <textarea class="form-control input-sm" name="Hotel.Address" placeholder="Enter address" maxlength="250">@Model.Hotel.Address</textarea>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">

            <div class="block">

                <h5 style="margin-top: 15px;">Communication Details</h5>
                <br />
                <div class="form-group">
                    <label>Mobile No</label>
                    <div class="input-group">
                        <input type="text" id="txtmobileNo" class="form-control input-sm" name="Hotel.MobileNo" maxlength="14" placeholder="Enter mobile number" value="@Model.Hotel.MobileNo">
                        <span class="input-group-addon">
                            <i class="fa fa-mobile"></i>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label>Telephone Code</label>
                    <div class="input-group">
                        <input type="text" id="txttelephoneCode" class="form-control input-sm" name="Hotel.TelephoneCode" placeholder="Enter telephone Code" maxlength="4" value="@Model.Hotel.TelephoneCode">
                        <span class="input-group-addon">
                            <i class="fa fa-phone"></i>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label>Telephone No</label>
                    <div class="input-group">
                        <input type="text" id="txttelephoneNo" class="form-control input-sm" name="Hotel.TelephoneNo" placeholder="Enter telephone number" maxlength="12" value="@Model.Hotel.TelephoneNo">
                        <span class="input-group-addon">
                            <i class="fa fa-phone"></i>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label>Email Id</label>
                    <div class="input-group">
                        <input type="text" id="txtemailId" class="form-control input-sm" name="Hotel.EmailId" placeholder="Enter email id" value="@Model.Hotel.EmailId" maxlength="100">
                        <span class="input-group-addon">
                            <i class="fa fa-envelope-o"></i>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label>Fax No</label>
                    <div class="input-group">
                        <input type="text" id="txtfaxNo" class="form-control input-sm" name="Hotel.FaxNo" placeholder="Enter fax number" value="@Model.Hotel.FaxNo" maxlength="14">
                        <span class="input-group-addon">
                            <i class="fa fa-fax"></i>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label>Website</label>
                    <div class="input-group">
                        <input type="text" id="txtwebsite" class="form-control input-sm" name="Hotel.Website" placeholder="Enter website" value="@Model.Hotel.Website" maxlength="100">
                        <input type="hidden" id="hdnwebsite" value="@Model.Hotel.Website">
                        <span class="input-group-addon">
                            <i class="fa fa-google-wallet"></i>
                        </span>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-md-3">

            <div class="block">

                <h5 style="margin-top: 15px;">Additional Details</h5>
                <br />
                <div class="form-group">
                    <label>Lohana Ratings</label>
                    <div class="input-group">

                        <select id="drplohanaRatings" class="form-control input-sm" name="Hotel.LohanaRatings">

                            <option value="0">Select lohana ratings</option>

                            @foreach (var item in LookupInfo.Get_LohanaRatings())
                            {
                                if (Model.Hotel.LohanaRatings == item.Key)
                                {
                                    <option value="@item.Key" selected="selected">@item.Value</option>
                                }
                                else
                                {
                                    <option value="@item.Key">@item.Value</option>
                                }
                            }

                        </select>

                        <span class="input-group-addon">
                            <i class="fa fa-star-o"></i>
                        </span>

                    </div>
                </div>


                <div class="form-group">
                    <label>Hotel Description</label>
                    <div class="input-group">
                        <textarea class="form-control input-sm" name="Hotel.HotelDescription" placeholder="Enter hotel description" maxlength="100">@Model.Hotel.HotelDescription</textarea>
                    </div>
                </div>

                <div class="form-group">
                    <label>Top Attractions Near By</label>
                    <textarea class="form-control input-sm" name="Hotel.TopAttractionNearBy" placeholder="Enter top attraction nearby" maxlength="200">@Model.Hotel.TopAttractionsNearBy</textarea>
                </div>

                <div class="form-group">
                    <label>Useful Hotel Stats</label>
                    <textarea class="form-control input-sm" name="Hotel.Stats" placeholder="Enter hotel stats" maxlength="200">@Model.Hotel.UsefulHotelStats</textarea>
                </div>

                <div class="form-group">
                    <label>Notes</label>
                    <textarea class="form-control input-sm" name="Hotel.Notes" placeholder="Enter hotel notes" maxlength="200">@Model.Hotel.Notes</textarea>
                </div>

                <div class="form-group">
                    <label>Comments</label>
                    <textarea class="form-control input-sm" name="Hotel.Comments" placeholder="Enter hotel comments / Recommendation" maxlength="200">@Model.Hotel.Comments</textarea>
                </div>
            </div>
        </div>

    </form>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">

                <button type="button" id="btnSaveBasicDetails" class="btn btn-success btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button>
                <button type="button" id="btnResetBasicDetails" class="btn btn-warning btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>
                <a href="Search" class="btn btn-info btn-rounded label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-angle-double-left"></i></span>Back</a>

            </div>
        </div>
    </div>

</div>