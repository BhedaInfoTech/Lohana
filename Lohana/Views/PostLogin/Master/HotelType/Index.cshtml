@model Lohana.Models.Master.HotelTypeViewModel

@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/Common/generic.common.methods.js"></script>
<script src="~/Scripts/Master/HotelType/hoteltype-events.js"></script>
<script src="~/Scripts/Master/HotelType/hoteltype-methods.js"></script>
<script src="~/Scripts/Common/generic.common.events.js"></script>
<script src="~/Scripts/Master/HotelType/hoteltype-Validations.js"></script>
<div class="content-area p-y-1">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <h4>HotelType</h4>
                    <ol class="breadcrumb no-bg m-b-1">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">HotelType</a></li>
                        <li class="breadcrumb-item"><a href="#">Search</a></li>
                        <li class="breadcrumb-item active">Create</li>
                    </ol>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <h5 class="card-header">
                        <span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span>&nbsp; HotelType Create
                    </h5>
                    <form role="form" id="frmHotelType">
                        <div class="card-block p-t-0 p-b-0">
                            <div class="row">
                                <div class="col-md-4">
                                    <label for="">Hotel type</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Enter Hotel Type" name="HotelTypeInfo.HotelType" id="txtHotelType" maxlength="50" value="">
                                        <input type="hidden" id="hdnHotelType" name="HotelTypeInfo.HotelType" value="">
                                        <span class="input-group-addon">
                                            <i class="fa fa-sort-alpha-asc"></i>
                                        </span>
                                    </div>
                                </div>
                                

                            <div class="col-md-4">
                                    <label for="">Set Active</label>
                                    <div class="input-group">
                                        <input class="js-switch" data-color="#1bc044" checked="" data-switchery="true" value="true" name="HotelTypeInfo.IsActive" type="checkbox" id="Flag">
                                    </div>
                                </div>
                            </div>
                            <br />
                            <br />
                            <div class="row" style="text-align: center;">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <button type="button" id="btnSearchHotelType" class="btn btn-purple btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-search"></i></span>Search</button>
                                        <button type="button" id="btnSaveHotelType" class="btn btn-success btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button>
                                        <button type="reset" id="btnResetHotelType" class="btn btn-warning btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="submit-progress hidden">
                        <i class="fa fa-2x fa-spinner fa-spin"></i>
                        <label>Please wait while Saving Data...</label>
                    </div>
                </div>
                <div class="card">
                    <h5 class="card-header">
                        <span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span>&nbsp; Hotel Type Listing
                    </h5>
                    <form role="form" id="frmSearchCountry">
                        <input type="hidden" id="hdnSearchHotelTypeId" value="" name="Filter.HotelTypeId" />
                        <div class="card-block p-t-0 p-b-0">
                            <div class="overflow-x-auto">
                                <table class="table m-b-0" id="tblHotelType" data-current-page=""></table>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
