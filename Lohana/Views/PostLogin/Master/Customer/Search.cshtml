<div class="content-area p-y-1">
    <div class="container-fluid">

        <div class="row">

            <div class="col-md-6">

                <h4>Customer</h4>
                <ol class="breadcrumb no-bg m-b-1">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Customer</a></li>
                    <li class="breadcrumb-item active">Search</li>
                </ol>

            </div>

            <div class="col-md-6">
                <div class="form-group" style="text-align: right; padding-top: 8px;">
                    <span data-toggle="tooltip" data-placement="left" title="" data-color="tooltip-info" data-original-title="Help / Info">
                        <a href="#" class="btn btn-info btn-circle waves-effect waves-light" data-toggle="modal" data-target=".help_info">
                            <i class="ti-info"></i>
                        </a>
                    </span>
                </div>
            </div>

        </div>

        <form role="form" id="frmSearchCustomer">
            <input type="hidden" id="hdnSearchCustomerId" value="CustomerId" name="Filter.CustomerId" />
            <div class="card">
                <h5 class="card-header">
                    <span style="vertical-align: middle;" class="s-icon"><i class="ti-search"></i></span> &nbsp; Customer Search
                </h5>
                <div class="card-block p-t-0 p-b-0">

                    <div class="row">

                        <div class="col-md-3">
                            <label for="">First Name</label>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Enter first name" name="Customer.FirstName" maxlength="50">
                                <span class="input-group-addon">
                                    <i class="fa fa-sort-alpha-asc"></i>
                                </span>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <label for="">Middle Name</label>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Enter middle name" name="Customer.MiddleName" maxlength="50">
                                <span class="input-group-addon">
                                    <i class="fa fa-sort-alpha-asc"></i>
                                </span>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <label for="">Last Name</label>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Enter last name" name="Customer.LastName" maxlength="50">
                                <span class="input-group-addon">
                                    <i class="fa fa-sort-alpha-asc"></i>
                                </span>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <label>Mobile Number</label>
                            <div class="input-group">
                                <input type="text" id="txtmobileNumber" class="form-control input-sm" name="Customer.MobileNo" placeholder="Enter mobile number" maxlength="11">
                                <span class="input-group-addon">
                                    <i class="fa fa-mobile"></i>
                                </span>
                            </div>
                        </div>
                        <br />
                        <br />

                        <div class="row" style="text-align: center;">

                            <div class="col-md-3">
                                <div class="form-group">
                                    <br />
                                    <button type="button" id="btnSearchCustomer" class="btn btn-purple btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-search"></i></span>Search</button>
                                    <button type="reset" id="btnResetCustomer" class="btn btn-warning btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>
                                </div>
                            </div>


                            @*<div class="col-md-3">
                                <div class="form-group">
                                    <br />
                                    <button type="button" id="btnSearchCustomer" class="btn btn-info label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-search"></i></span>Search</button>
                                    <button type="reset" id="btnResetCustomer" class="btn btn-warning label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>
                                </div>
                            </div>*@
                        </div>
                        <br />
                        </div>
                    </div>
                </div>             

            <div class="card">
                 <h5 class="card-header">
                    <span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span> &nbsp; Customer Listing
                </h5>
                <div class="btn-group" style="float: right; padding: 2px 6px;">
                    <a style="border-top-left-radius: 20px; border-bottom-left-radius: 20px;" href="Index" class="btn btn-outline-info w-min-sm m-b-0-25 waves-effect waves-light">Create</a>
                    <button style="border-top-right-radius: 20px; border-bottom-right-radius: 20px;" type="button" class="btn btn-outline-info w-min-sm m-b-0-25 waves-effect waves-light" id="btnEditCustomer">Edit</button>
                    @*<a style="border-top-right-radius: 20px; border-bottom-right-radius: 20px;" href="Demo" class="btn btn-outline-info w-min-sm m-b-0-25 waves-effect waves-light">demo</a>*@
                </div>
                <div class="card-block p-t-0 p-b-0">
                    <div class="row m-a-0">
                        <div class="col-md-12 p-a-0">
                                                       
                            <div class="overflow-x-auto">
                                <table class="table m-b-0" id="tblCustomer"></table>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
</form>
</div>
</div>

