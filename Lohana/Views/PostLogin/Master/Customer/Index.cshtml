@model Lohana.Models.Master.CustomerViewModel
@using LohanaBusinessEntities.Common;
<script src="~/Scripts/Common/generic.common.methods.js"></script>
<script src="~/Content/js/forms-pickers.js"></script>
<script src="~/Scripts/Master/Customer/customer-events.js"></script>
<script src="~/Scripts/Master/Customer/customer-methods.js"></script>
<script src="~/Scripts/Master/Customer/customer-validations.js"></script>
<script src="~/Scripts/Common/generic.common.events.js"></script>

<div class="content-area p-y-1">

    <div class="container-fluid">

        <div class="row">

            <div class="col-md-6">
                <div class="form-group">
                    <h4>Customer</h4>
                    <ol class="breadcrumb no-bg m-b-1">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Customer</a></li>
                        <li class="breadcrumb-item"><a href="#">Search</a></li>
                        <li class="breadcrumb-item active">Create</li>
                    </ol>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group" style="text-align: right; padding-top: 8px;">
                    <span data-toggle="tooltip" data-placement="left" title="" data-color="tooltip-info" data-original-title="Help / Info">
                        <a href="#" class="btn btn-info btn-circle waves-effect waves-light" data-toggle="modal" data-target=".help_info">
                            <i class="ti-info"></i>
                        </a>
                    </span>
                </div>
            </div>

        </div>

        <div class="box box-block bg-white">
            <form id="frmCustomer" role="form">
                <input type="hidden" id="hdnCustomerId" value="@Model.Customer.CustomerId" name="Customer.CustomerId" />

                <div class="card">
                    <h5 class="card-header">
                        <span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span> &nbsp; Customer Create
                    </h5>

                    <div class="card-block p-t-0 p-b-0">

                        <div class="row">
                            <div class="col-md-4">
                                <label>First Name</label>
                                <div class="input-group">
                                    <input type="text" id="txtfirstName" class="form-control input-sm" name="Customer.FirstName" placeholder="Enter first name" value="@Model.Customer.FirstName" maxlength="50">
                                    <span class="input-group-addon">
                                        <i class="fa fa-sort-alpha-asc"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label>Middle Name</label>
                                <div class="input-group">
                                    <input type="text" id="txtmiddleName" class="form-control input-sm" name="Customer.MiddleName" placeholder="Enter middle name" value="@Model.Customer.MiddleName" maxlength="50">
                                    <span class="input-group-addon">
                                        <i class="fa fa-sort-alpha-asc"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label>Last Name</label>
                                <div class="input-group">
                                    <input type="text" id="txtlastName" class="form-control input-sm" name="Customer.LastName" placeholder="Enter last name" value="@Model.Customer.LastName" maxlength="50">
                                    <span class="input-group-addon">
                                        <i class="fa fa-sort-alpha-asc"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-4">
                                <label for="drpGender" style="color: #333">Gender</label>
                                <div class="input-group">
                                    <select class="form-control" name="Customer.Gender" id="drpGender">

                                        <option value="0">Select gender</option>

                                        @foreach (var item in LookupInfo.Get_Gender())
                                        {
                                            if (Model.Customer.Gender == item.Key)
                                            {
                                                <option value="@item.Key" selected="selected">@item.Value</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Key">@item.Value</option>
                                            }
                                        }
                                    </select>


                                    <span class="input-group-addon">
                                        <i class="fa fa-male"></i>
                                    </span>
                                    <span class="input-group-addon">
                                        <i class="fa fa-female"></i>
                                    </span>
                                    <span class="input-group-addon">
                                        <i class="fa fa-transgender"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <label>Date Of Birth</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="datepicker-autoclose" placeholder="select date of birth" name="Customer.DOB" value="@((Model.Customer.DOB == DateTime.MinValue ? "" : Model.Customer.DOB.ToString("MM-dd-yyyy")))">
                                    <span class="input-group-addon"><i class="fa fa-calendar-o"></i></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <label>Email Address</label>
                                <div class="input-group">
                                    <input type="text" id="txtEmailId" class="form-control input-sm" name="Customer.EmailId" placeholder="Enter email address" value="@Model.Customer.EmailId" maxlength="100">
                                    <input type="hidden" id="hdnEmailId" class="form-control input-sm" value="@Model.Customer.EmailId">

                                    <span class="input-group-addon">
                                        <i class="fa fa-envelope"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-4">
                                <label>Phone Number</label>
                                <div class="input-group">
                                    <input type="text" class="form-control input-sm" name="Customer.PhoneNo" placeholder="Enter phone number" value="@Model.Customer.PhoneNo" maxlength="20">
                                    <span class="input-group-addon">
                                        <i class="fa fa-phone"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label>Mobile Number</label>
                                <div class="input-group">
                                    <input type="text" class="form-control input-sm" name="Customer.MobileNo" placeholder="Enter mobile number" value="@Model.Customer.MobileNo" maxlength="15">
                                    <span class="input-group-addon">
                                        <i class="fa fa-mobile"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label>Pan No</label>
                                <div class="input-group">
                                    <input type="text" id="txtpanNo" class="form-control input-sm" name="Customer.PanNo" placeholder="Enter pan number" value="@Model.Customer.PanNo" maxlength="15">
                                    <span class="input-group-addon">
                                        <i class="fa fa-sort-alpha-asc"></i>
                                    </span>
                                </div>
                            </div>


                        </div>
                        <br />

                        <div class="row">

                            <div class="col-md-4">
                                <label>Aadhar Card No</label>
                                <div class="input-group">
                                    <input type="text" id="txtaadharCardNo" class="form-control input-sm" name="Customer.AadharCardNo" placeholder="Enter aadhar card number" value="@Model.Customer.AadharCardNo" maxlength="15">
                                    <span class="input-group-addon">
                                        <i class="fa fa-sort-alpha-asc"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <label>Passport No</label>
                                <div class="input-group">
                                    <input type="text" id="txtpassportNo" class="form-control input-sm" name="Customer.PassportNo" placeholder="Enter passport number" value="@Model.Customer.PassportNo" maxlength="15">
                                    <span class="input-group-addon">
                                        <i class="fa fa-sort-alpha-asc"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Address</label>
                                    <textarea class="form-control input-sm" name="Customer.Address" placeholder="Enter address" maxlength="250">@Model.Customer.Address</textarea>
                                </div>
                            </div>

                        </div>

                        <div class="row">

                            <div class="col-md-4">
                                <label for="drpCustomerCategoryId">Customer Category</label>
                                <div class="input-group">
                                    <select class="form-control" name="Customer.CustomerCategoryId" id="drpCustomerCategoryId">

                                        <option value="0">Select customer category</option>
                                        @foreach (var item in Model.CustomerCategory)
                                        {
                                            if (Model.Customer.CustomerCategoryId == item.CustomerCategoryId)
                                            {
                                                <option value="@item.CustomerCategoryId" selected="selected">@item.CustomerCategoryName</option>
                                            }
                                            else
                                            {
                                                <option value="@item.CustomerCategoryId">@item.CustomerCategoryName</option>
                                            }
                                        }
                                        }
                                        @*@foreach (var item in LookupInfo.Get_Customer_Category())
                                            {
                                                if (Model.Customer.CustomerCategory == item.Key)
                                                {
                                                    <option value="@item.Key" selected="selected">@item.Value</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Key">@item.Value</option>
                                                }
                                            }*@
                                    </select>
                                    <span class="input-group-addon">
                                        <i class="fa fa-user"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <label for="">Set Active</label>
                                <div class="input-group">
                                    @if (Model.Customer.IsActive == false)
                                    {
                                        <input class="js-switch" data-color="#1bc044" data-switchery="true" value="@Model.Customer.IsActive.ToString()" name="Customer.IsActive" type="checkbox" id="Flag">
                                    }
                                    else
                                    {
                                        <input class="js-switch" data-color="#1bc044" data-switchery="true" value="@Model.Customer.IsActive.ToString()" name="Customer.IsActive" type="checkbox" id="Flag" checked="checked">
                                    }
                                </div>
                            </div>
                        </div>
                        <br />
                    </div>

                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">

                            <button type="button" id="btnSaveCustomer" class="btn btn-success btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button>
                            <button type="button" id="btnResetCustomer" class="btn btn-warning btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>
                            <a href="Search" class="btn btn-info btn-rounded label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-angle-double-left"></i></span>Back</a>


                            @*<button type="button" id="btnSaveCustomer" class="btn btn-success label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button>
                                <button type="reset" id="btnResetCustomer" class="btn btn-warning label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>
                                <a href="Search" class="btn btn-info label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-angle-double-left"></i></span>Back</a>*@

                        </div>
                    </div>
                </div>

            </form>

        </div>

    </div>

</div>

<div class="modal fade help_info" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    <span style="vertical-align: middle;" class="s-icon"><i class="ti-info-alt"></i></span> &nbsp; Help / Info
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <ul class="list-unstyled" style="padding-left: 5px;">
                            <li><i class="fa fa-circle-o text-info mr-0-5"></i> Customer create page is used to Create a Customer or Update Customer.</li>
                            <li>
                                <i class="fa fa-circle-o text-info mr-0-5"></i> Customer create page contains following functionality.
                                <ul class="list-unstyled mb-1" style="padding-left: 15px;">
                                    <li> <button type="button" class="btn btn-success label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button> - On click of Save button, It Saves the Customer Data if all the required fields inputted.</li>
                                    <li> <a class="btn btn-warning label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</a> - On click of Reset button, It resets the data to its Original values.</li>
                                    <li> <a href="Search" class="btn btn-info label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-angle-double-left"></i></span>Back</a> - On click of Cancel button,  It Redirects to the Customer Listing Page.</li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


