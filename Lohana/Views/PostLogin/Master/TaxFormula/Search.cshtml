<!-- Content -->

<script src="~/Scripts/Common/generic.common.methods.js"></script>
<script src="~/Scripts/Master/Taxformula/taxformula-search-events.js"></script>
<script src="~/Scripts/Master/Taxformula/taxformula-search-methods.js"></script>

<div class="content-area p-y-1">
    <div class="container-fluid">

        <div class="row">

            <div class="col-md-6">

                <h4>TaxFormula</h4>
                <ol class="breadcrumb no-bg m-b-1">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Tax Formula</a></li>
                    <li class="breadcrumb-item active">Search</li>
                </ol>
            </div>

            <div class="col-md-6">
                <div class="form-group" style="text-align: right; padding-top: 8px;">
                    <span data-toggle="tooltip" data-placement="left" title="" data-color="tooltip-info" data-original-title="Help / Info">
                        <a href="#" class="btn btn-info btn-circle waves-effect waves-light" data-toggle="modal" data-target=".help_info">
                            <i class="ti-info"></i>
                        </a>
                    </span>
                </div>
            </div>

        </div>

        <form role="form" id="frmSearchTaxFormula">

            <input type="hidden" id="hdnSearchTaxFormulaId" name="TaxFormula.TaxFormulaId" />

            <div class="card">
                <h5 class="card-header">
                    <span style="vertical-align: middle;" class="s-icon"><i class="ti-search"></i></span> &nbsp; Tax Formula Search
                </h5>
                <div class="card-block p-t-0 p-b-0">
                    <div class="row">

                        <div class="col-md-4">
                            <label>Tax Formula Name</label>
                            <div class="input-group">
                                <input type="text" id="txtTaxFormulaName" class="form-control input-sm" name="TaxFormula.TaxFormulaName" placeholder="Enter tax formula">
                                <span class="input-group-addon">
                                    <i class="fa fa-globe"></i>
                                </span>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <br />
                                <button type="button" id="btnSearchTaxformula" class="btn btn-purple btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-search"></i></span>Search</button>
                                <button type="reset" id="btnResetTaxformula" class="btn btn-warning btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>
                            </div>
                        </div>

                        <div class="col-md-12">

                            <div class="btn-group" style="float: right; padding: 2px 6px;">
                                <a style="border-top-left-radius: 20px; border-bottom-left-radius: 20px;" href="Index" class="btn btn-outline-info w-min-sm m-b-0-25 waves-effect waves-light">Create</a>
                                <button type="button" class="btn btn-outline-info w-min-sm m-b-0-25 waves-effect waves-light" id="btnEditTaxFormula" disabled>Edit</button>
                                <button type="button" id="btnViewFormulaCharges" style="border-top-right-radius: 20px; border-bottom-right-radius: 20px; " class="btn btn-outline-info w-min-sm m-b-0-25 waves-effect waves-light" data-toggle="modal" data-target=".view_details" disabled>View</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        

            <div class="card">
                <h5 class="card-header">
                    <span style="vertical-align: middle;" class="s-icon"><i class="ti-view-list-alt"></i></span> &nbsp; TaxFormula Listing
                </h5>

                <input type="hidden" id="hdnCurrentPage" name="Pager.CurrentPage" value="" />

                <div class="card-block p-a-0">
                    <div class="row m-a-0">
                        <div class="col-md-12 p-a-0">
                            <div class="card-block p-t-0 p-b-0">
                                <div class="overflow-x-auto">
                                    <table class="table m-b-0" id="tblTaxFormula" data-current-page="1">
                                        <thead class="thead-inverse">
                                            <tr>
                                                <th width="5%"></th>
                                                <th style="text-align:center">Tax Formula</th>
                                                <th style="text-align:center">Charges Type</th>
                                                <th style="text-align:center">Calculated On</th>

                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

			</form>
        
    </div>
</div>

<div class="modal fade view_details" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    <span style="vertical-align: middle;" class="s-icon"><i class="ti-view-list-alt"></i></span>&nbsp; View Formula Charges
                </h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



