@model Lohana.Models.Master.VendorViewModel
@using LohanaBusinessEntities.Common;


<script src="~/Scripts/Master/Vendor/vendor-bank-validations.js"></script>

<script src="~/Scripts/Master/Vendor/vendor-bank-methods.js"></script>

<script src="~/Scripts/Master/Vendor/vendor-bank-events.js"></script>

<form id="frmVendorbank">

    <div class="row">
        <input type="hidden" id="hdnBankVendorId" name="Vendor.Bank.VendorId" value="@Model.Vendor.VendorId" />
        <div class="col-md-12">

            <div class="row">
                <div class="col-md-3">
                    <label for="">Bank Name</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Enter vendor bank name" name="Vendor.Bank.BankName" id="txtBankName" maxlength="25">
                        <input type="hidden" id="hdnBankName" value="">
                        <span class="input-group-addon">
                            <i class="fa fa-sort-alpha-asc"></i>
                        </span>
                    </div>
                </div>

                <div class="col-md-3">
                    <label for="">Branch Name</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Enter branch name" name="Vendor.Bank.BranchName" id="txtBranchName" maxlength="25">
                        <input type="hidden" id="hdnBranchName" value="">
                        <span class="input-group-addon">
                            <i class="fa fa-sort-alpha-asc"></i>
                        </span>
                    </div>
                </div>

                <div class="col-md-3">
                    <label for="">Account Holder Name</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Enter account holder name" name="Vendor.Bank.AccountHolderName" id="txtAccountHolderName" maxlength="25">
                        <input type="hidden" id="hdnAccountHolderName" value="">
                        <span class="input-group-addon">
                            <i class="fa fa-sort-alpha-asc"></i>
                        </span>
                    </div>
                </div>

                <div class="col-md-3">
                    <label for="">Account Number</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Enter account number" name="Vendor.Bank.AccountNo" id="txtAccountNo" maxlength="25">
                        <input type="hidden" id="hdnAccountNo" value="">
                        <span class="input-group-addon">
                            <i class="fa fa-sort-alpha-asc"></i>
                        </span>
                    </div>
                </div>

            </div>

            <br />

            <div class="row">

                <div class="col-md-3">
                    <label for="">Bank IFSC Code</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Enter bank IFSC code name" name="Vendor.Bank.IFSCCode" id="txtIFSCCode" maxlength="25">
                        <input type="hidden" id="hdnIFSCCode" value="">
                        <span class="input-group-addon">
                            <i class="fa fa-sort-alpha-asc"></i>
                        </span>
                    </div>
                </div>

                <div class="col-md-3">
                    <label for="">Bank MICR Code</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Enter bank MICR code name" name="Vendor.Bank.MICRCode" id="txtMICRCode" maxlength="25">
                        <input type="hidden" id="hdnMICRCode" value="">
                        <span class="input-group-addon">
                            <i class="fa fa-sort-alpha-asc"></i>
                        </span>
                    </div>
                </div>

                <div class="col-md-3">
                    <label for="">Bank SWIFT Code</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Enter SWIFT code" name="Vendor.Bank.SWIFTCode" id="txtSWIFTCode" maxlength="25">
                        <input type="hidden" id="hdnSWIFTCode" value="">
                        <span class="input-group-addon">
                            <i class="fa fa-sort-alpha-asc"></i>
                        </span>
                    </div>
                </div>

            </div>

            <br />

            <div class="row" style="text-align: center;">
                <div class="col-md-12">
                    <div class="form-group">
                        <button type="button" id="btnAddVendorBank" class="btn btn-success btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button>
                        <button type="reset" id="btnDeleteVendorBank" class="btn btn-danger btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"disabled><span class="btn-label"><i class="ti-close"></i></span>Delete</button>
                    </div>
                </div>
            </div>

            @*<div class="form-group">
                <button type="button" id="btnAddVendorBank" class="btn btn-info   label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-check"></i></span>Add</button>
            </div>*@

        </div>

        @*<div class="btn-group" style="float: right; padding: 2px 6px;">

            <button type="button" style="border-top-left-radius: 20px; border-bottom-left-radius: 20px;" class="btn btn-outline-info w-min-sm m-b-0-25 waves-effect waves-light" id="btnEditVendorBank">Edit</button>

            <button type="button" style="border-top-right-radius: 20px; border-bottom-right-radius: 20px;" class="btn btn-outline-info w-min-sm m-b-0-25 waves-effect waves-light" id="btnDeleteVendorBank">Delete</button>



        </div>*@

        <br />
    </div>

</form>

<div class="card" id="divVendorBankList">
    <h5 class="card-header">
        <span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span> &nbsp; Vendors Bank List
    </h5>

    <form id="frmSearchVendorBank">

        <input type="hidden" id="hdnSearchBankId" value="" name="BankFilter.BankId" />

        <input type="hidden" id="hdnCurrentPage" name="Pager.CurrentPage" value="" />

        <div class="card-block p-t-0 p-b-0">

            <div class="overflow-x-auto">
                <table class="table m-b-0" id="tblVendorBankDetails">
                    <thead class="thead-inverse">
                        <tr>
                            <th width="10%"></th>
                            <th width="10%">Bank Name</th>
                            <th width="10%">Branch Name</th>
                            <th width="10%">Account No</th>
                            <th width="10%">IFSC Code</th>
                            <th width="10%">MICR Code</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

        </div>

    </form>

</div>
