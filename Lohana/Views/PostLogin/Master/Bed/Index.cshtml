@model Lohana.Models.Master.CountryViewModel
@using Lohana.Common;
@using LohanaBusinessEntities.Common;


<script src="~/Scripts/Common/generic.common.methods.js"></script>
<script src="~/Scripts/Common/generic.common.events.js"></script>
<input type="hidden" id="hdfLookupCurrentPage"  value="1" />
<div class="content-area p-y-1">
    <div class="container-fluid">

        <div class="row">

            <div class="col-md-6">

                <h4>Bed</h4>
                <ol class="breadcrumb no-bg m-b-1">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Bed</a></li>
                    <li class="breadcrumb-item active">Search</li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>

            </div>

            <div class="col-md-6">
                <div class="form-group" style="text-align: right; padding-top: 8px;">
                    <span data-toggle="tooltip" data-placement="left" title="" data-color="tooltip-info" data-original-title="Help / Info">
                        <a href="#" class="btn btn-info btn-circle waves-effect waves-light" data-toggle="modal" data-target=".help_info">
                            <i class="ti-info"></i>
                        </a>
                    </span>
                </div>
            </div>

        </div>

        <div class="box box-block bg-white">

            <div class="card">
                <h5 class="card-header">
                    <span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span> &nbsp; Bed Create
                </h5>

                <div class="card-block p-t-0 p-b-0">

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group auto-complete">
                                <span class="label label-primary label-form" style="margin-bottom: 1px;">Country</span>
                                <div id="Country" class="input-group">
                                    <input type="text" class="form-control country-filter autocomplete-text lookup-text" id="textCountry" placeholder="Enter Country to search" value="" data-table="Country" data-col="CountryId,CountryName" data-headernames="Country" data-field="CountryId" data-param="hdnCountryId">
                                    
                                     <span class="input-group-addon">
                                         <a href="#" class="text-muted" id="hrefDealer" role="button">
                                             <i class="ti-search"></i>
                                         </a>
                                        
                                    </span>
                                    <input type="hidden" id="hdnCountryId" value="" name="Country.CountryId" class="auto-complete-value" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />  
                    <div class="row">
                        <div class="col-md-3">
                            <label for="">Bed Name</label>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Enter Bed Name">
                                <span class="input-group-addon">
                                    <i class="fa fa-bed"></i>
                                </span>
                            </div>
                        </div>
                    </div>
					<div class="row">
						<div class="col-md-3">
                            <div class="form-group auto-complete">
                                <span class="label label-primary label-form" style="margin-bottom: 1px;">Country</span>
                                <select id="drpCountry" class="form-control" data-value="1" name="Bed.City">
									@*<option value="5">India.,Maharashtra,kudal</option>*@
                                </select>
                            </div>
                        </div>

						<div class="col-md-3">
                            <div class="form-group auto-complete">
                                <span class="label label-primary label-form" style="margin-bottom: 1px;">Country</span>
                                <select id="drpCountry2" class="form-control" data-value="1,2,3" multiple="multiple">
									@*<option value="5">India.,Maharashtra,kudal</option>*@
                                </select>
                            </div>
                        </div>
					</div>

					<div class="row">
						<div class="col-md-3">
                            <div class="form-group auto-complete">
                                <span class="label label-primary label-form" style="margin-bottom: 1px;">Country</span>
                                <select id="drpCountry3" class="form-control" name="Country"  data-value="1" >
									@*<option value="5">India.,Maharashtra,kudal</option>*@
                                </select>
                            </div>
                        </div>

						<div class="col-md-3">
                            <div class="form-group auto-complete">
                                <span class="label label-primary label-form" style="margin-bottom: 1px;">State</span>
                                <select id="drpState" class="form-control" name="State"  data-value="1" >
									@*<option value="5">India.,Maharashtra,kudal</option>*@
                                </select>
                            </div>
                        </div>

						<div class="col-md-3">
                            <div class="form-group auto-complete">
                                <span class="label label-primary label-form" style="margin-bottom: 1px;">City</span>
                                <select id="drpCity" class="form-control" name="City"  data-value="1" >
									@*<option value="5">India.,Maharashtra,kudal</option>*@
                                </select>
                            </div>
                        </div>
					</div>
                    <br />
                </div>

            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <button type="button" id="btnSave" class="btn btn-success label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button>
                        <button type="button" class="btn btn-warning label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>
                        <a href="Search" class="btn btn-info label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-angle-double-left"></i></span>Back</a>
                    </div>
                </div>
            </div>


        </div>

    </div>

</div>


<div class="modal fade help_info" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    <span style="vertical-align: middle;" class="s-icon"><i class="ti-info-alt"></i></span> &nbsp; Help / Info
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <ul class="list-unstyled" style="padding-left: 5px;">
                            <li><i class="fa fa-circle-o text-info mr-0-5"></i> Bed create page is used to Create a Bed or Update Bed.</li>
                            <li>
                                <i class="fa fa-circle-o text-info mr-0-5"></i> Bed create page contains following functionality.
                                <ul class="list-unstyled mb-1" style="padding-left: 15px;">
                                    <li> <button type="button" class="btn btn-success label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button> - On click of Save button, It Saves the Bed Data if all the required fields inputted.</li>
                                    <li> <a class="btn btn-warning label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</a> - On click of Reset button, It resets the data to its Original values.</li>
                                    <li> <a href="Search" class="btn btn-info label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-angle-double-left"></i></span>Back</a> - On click of Cancel button,  It Redirects to the Bed Listing Page.</li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>

	$(function ()
	{
		GetAutocompleteScript("Bed");
	});
	

</script>