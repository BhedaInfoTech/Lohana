@model Lohana.Models.Master.UserViewModel
@using LohanaBusinessEntities.Common;
@using Lohana.Common;



<script src="~/Scripts/Master/Attachment/attachment-methods.js"></script>

<script src="~/Scripts/Master/User/user-validation.js"></script>

<script src="~/Scripts/Common/generic.common.methods.js"></script>

<script src="~/Scripts/Master/User/user-methods.js"></script>

<script src="~/Scripts/Master/User/user-events.js"></script>

<script src="~/Scripts/Master/Attachment/attachment-events.js"></script>

<script src="~/Scripts/Common/generic.common.events.js"></script>

<div class="content-area p-y-1">

    <div class="container-fluid">

        <div class="row">

            <div class="col-md-6">
                <div class="form-group">
                    <h4>User</h4>
                    <ol class="breadcrumb no-bg m-b-1">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">User</a></li>
                        <li class="breadcrumb-item"><a href="#">Search</a></li>
                        <li class="breadcrumb-item active">Create</li>
                    </ol>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group" style="text-align: right; padding-top: 8px;">
                    <span data-toggle="tooltip" data-placement="left" title="" data-color="tooltip-info" data-original-title="Help / Info">
                        <a href="#" class="btn btn-info btn-circle waves-effect waves-light" data-toggle="modal" data-target=".help_info">
                            <i class="ti-info"></i>
                        </a>
                    </span>
                </div>
            </div>

        </div>

        <div class="card">
            <h5 class="card-header">
                <span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span> &nbsp; User Create
            </h5>
            <div class="card-block p-t-0 p-b-0">

                <form id="frmUser" role="form">
                    <input type="hidden" id="hdnUserId" value="@Model.User.UserId" name="User.UserId" />

                    <div class="row">

                        <div class="col-md-4">
                            <label>First Name</label>
                            <div class="input-group">
                                <input type="text" id="txtfirstName" class="form-control input-sm" name="User.FirstName" placeholder="Enter first name" value="@Model.User.FirstName" maxlength="25">
                                <span class="input-group-addon">
                                    <i class="fa fa-sort-alpha-asc"></i>
                                </span>
                            </div>
                        </div>


                        <div class="col-md-4">
                            <label for="">Middle Name</label>
                            <div class="input-group">
                                <input type="text" class="form-control input-sm" placeholder="Enter middle name" name="User.MiddleName" id="txtMiddleName" value="@Model.User.MiddleName" maxlength="25">
                                <span class="input-group-addon">
                                    <i class="fa fa-sort-alpha-asc"></i>
                                </span>
                            </div>

                        </div>
                        <div class="col-md-4">
                            <label for="">Last Name</label>
                            <div class="input-group">
                                <input type="text" class="form-control input-sm" placeholder="Enter last name" name="User.LastName" id="txtLastName" value="@Model.User.LastName" maxlength="25">
                                <span class="input-group-addon">
                                    <i class="fa fa-sort-alpha-asc"></i>
                                </span>
                            </div>

                        </div>

                    </div>
                    <br />

                    <div class="row">
                        <div class="col-md-4">
                            <label for="">User Name</label>
                            <div class="input-group">
                                <input type="text" class="form-control input-sm" placeholder="Enter user name" name="User.UserName" value="@Model.User.UserName" id="txtUserName" maxlength="15">
                                <input type="hidden" id="hdnUserName" class="form-control input-sm" value="" name="User.UserName">
                                <span class="input-group-addon">
                                    <i class="fa fa-sort-alpha-asc"></i>
                                </span>
                            </div>

                        </div>

                        <div class="col-md-4">
                            <label for="">Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control input-sm" placeholder="Enter password" name="User.Password" value="@Model.User.Password" id="txtPassword" maxlength="15">
                                <span class="input-group-addon">
                                    <i class="fa fa-sort-alpha-asc"></i>
                                </span>
                            </div>

                        </div>

                        <div class="col-md-4">
                            <label for="">Confirm Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control input-sm" placeholder="Enter confirm password" name="User.ConfirmPassword" value="@Model.User.Password" id="txtConfirmPassword" />
                                <span class="input-group-addon">
                                    <i class="fa fa-sort-alpha-asc"></i>
                                </span>
                            </div>

                        </div>

                    </div>
                    <br />

                    <div class="row">

                        <div class="col-md-4">
                            <label for="">Mobile No.</label>
                            <div class="input-group">
                                <input type="text" class="form-control input-sm" placeholder="Enter mobile number" name="User.MobileNo" value="@Model.User.MobileNo" maxlength="11">
                                <span class="input-group-addon">
                                    <i class="fa fa-mobile"></i>
                                </span>
                            </div>

                        </div>
                        <div class="col-md-4">
                            <label for="">Phone No.</label>
                            <div class="input-group">
                                <input type="text" class="form-control input-sm" placeholder="Enter phone number" name="User.PhoneNo" value="@Model.User.PhoneNo" maxlength="15">
                                <span class="input-group-addon">
                                    <i class="fa fa-phone"></i>
                                </span>
                            </div>

                        </div>
                        <div class="col-md-4">
                            <label for="">Email ID</label>
                            <div class="input-group">
                                <input type="text" class="form-control input-sm" placeholder="Enter email id" name="User.EmailId" value="@Model.User.EmailId" maxlength="30">
                                <span class="input-group-addon">
                                    <i class="fa fa-envelope"></i>
                                </span>
                            </div>

                        </div>
                    </div>
                    <br />

                    <div class="row">

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Residence Address</label>
                                <textarea class="form-control input-sm" name="User.ResidenceAddress" placeholder="Enter residence address" maxlength="250">@Model.User.ResidenceAddress</textarea>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="">Permanent Address</label>
                                <textarea class="form-control input-sm" placeholder="Enter permanent address" name="User.PermanentAddress" maxlength="250">@Model.User.PermanentAddress</textarea>
                            </div>
                        </div>

                    </div>
                    <br />

                    <div class="row">

                        <div class="col-md-4">
                            <label>User Role</label>
                            <div class="input-group">
                                <select id="drpUserRole" class="form-control input-sm" name="User.Role">
                                    <option value="0">Select user role</option>
                                    @foreach (var item in LookupInfo.Get_User_Role())
                                    {
                                        if (Model.User.RoleId == item.Key)
                                        {
                                            <option value="@item.Key" selected="selected">@item.Value</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Key">@item.Value</option>
                                        }
                                    }
                                </select>
                                <span class="input-group-addon">
                                    <i class="fa fa-star-o"></i>
                                </span>
                            </div>

                        </div>

                        <div class="col-md-4">
                            <label>Select Teamlead</label>

                            <select id="drpTeamlead" class="form-control input-sm User" name="User.TeamLeadId" @*onchange="Set_TeamLead();"*@>
                                <option value="0">-Select TeamLead-</option>
                                @foreach (var item in Model.Users)
                                {
                                    //if (Model.User.TeamLeadId.Split(',').Contains(Convert.ToString(item.UserId)))
                                    if (Model.User.UserId == item.UserId)
                                    {
                                        <option value="@item.UserId" selected="selected">@item.FirstName @item.LastName</option>
                                    }
                                    else
                                    {
                                        <option value="@item.UserId">@item.FirstName @item.LastName</option>
                                    }
                                }

                            </select>
                            <input type="hidden" id="hdnTeamLead" name="User.TeamLeadId" value="" />

                        </div>

                    </div>

                    <br />

                    @*Functionality Point of View*@

                    <div class="row">

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Location</label>
                                <select id="drplocation" multiple="multiple" class="form-control input-sm Location" name="User.Locations" onchange="Set_Location();">

                                    @foreach (var item in Model.Cities)
                                    {
                                        if (Model.User.Locations != null)
                                        {
                                            if (Model.User.Locations.Split(',').Contains(Convert.ToString(item.CityId)))
                                            {
                                                <option value="@item.CityId" selected="selected">@item.CityName</option>
                                            }
                                            else
                                            {
                                                <option value="@item.CityId">@item.CityName</option>
                                            }
                                        }
                                        else
                                        {
                                            <option value="@item.CityId">@item.CityName</option>
                                        }
                                    }
                                </select>
                                <input type="hidden" id="hdnLocation" name="User.Locations" value="" />

                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Specialization</label>
                                <select id="drpSpecialization" multiple="multiple" class="form-control input-sm Specialization" name="User.SpecializationType" onchange="SetSpecialization();">

                                    @foreach (var item in Model.Specialization)
                                    {
                                        if (Model.User.SpecializationType != null)
                                        {
                                            if (Model.User.SpecializationType.Split(',').Contains(Convert.ToString(item.SpecializationId)))
                                            {
                                                <option value="@item.SpecializationId" selected="selected">@item.Specializationname</option>
                                            }
                                            else
                                            {
                                                <option value="@item.SpecializationId">@item.Specializationname</option>
                                            }
                                        }
                                        else
                                        {
                                            <option value="@item.SpecializationId">@item.Specializationname</option>
                                        }
                                    }
                                </select>
                                <input type="hidden" id="hdnSpecialization" name="User.SpecializationType" value="" />

                            </div>
                        </div>

                        

                    </div>

                    <br />

                    @*End Functionality Point of View*@

                    <div class="row">

                        <div class="col-md-4">
                            <div class="input-group">
                                @if (Model.User.IsActive == false)
                                {
                                    <input class="js-switch" data-color="#1bc044" data-switchery="true" value="@Model.User.IsActive.ToString()" name="User.IsActive" type="checkbox" id="Flag">
                                }
                                else
                                {
                                    <input class="js-switch" data-color="#1bc044" data-switchery="true" value="@Model.User.IsActive.ToString()" name="User.IsActive" type="checkbox" id="Flag" checked="checked">
                                }
                            </div>
                        </div>

                        <div class="col-md-4">

                            <input type="hidden" name="Accessories.AttachmentId" />

                            <input type="hidden" name="Accessories.AttachmentName" />

                            <input type="hidden" name="Accessories.RefId" value="@Model.User.UserId" />

                            <input type="hidden" name="Accessories.RefTypeName" value="User">

                            <input type="hidden" name="Accessories.RefType" />

                            <input type="hidden" name="Accessories.RefCategory" value="User" />

                            <div class="input-group" id="divImage" style="display:none">

                                <label for=""><b>Photo</b></label>

                                <input type="file" id="imageUpload" />


                            </div>

                        </div>

                    </div>


                    <br />

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">

                                <button type="button" id="btnSaveUser" class="btn btn-success btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button>
                                <button type="reset" id="btnResetVehicle" class="btn btn-warning btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>
                                <a href="Search" class="btn btn-info btn-rounded label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-angle-double-left"></i></span>Back</a>


                                @*<button type="button" id="btnSaveUser" class="btn btn-success label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button>
                                    <button type="reset" class="btn btn-warning label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>
                                    <a href="Search" class="btn btn-info label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-angle-double-left"></i></span>Back</a>*@

                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>



<div class="modal fade help_info" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    <span style="vertical-align: middle;" class="s-icon"><i class="ti-info-alt"></i></span> &nbsp; Help / Info
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <ul class="list-unstyled" style="padding-left: 5px;">
                            <li><i class="fa fa-circle-o text-info mr-0-5"></i> User create page is used to Create a User or Update User.</li>
                            <li>
                                <i class="fa fa-circle-o text-info mr-0-5"></i> User create page contains following functionality.
                                <ul class="list-unstyled mb-1" style="padding-left: 15px;">
                                    <li> <button type="button" class="btn btn-success label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button> - On click of Save button, It Saves the User Data if all the required fields inputted.</li>
                                    <li> <a class="btn btn-warning label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</a> - On click of Reset button, It resets the data to its Original values.</li>
                                    <li> <a href="Search" class="btn btn-info label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-angle-double-left"></i></span>Back</a> - On click of Cancel button,  It Redirects to the User Listing Page.</li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script>

    $('#drplocation').multiSelect();

    function Set_Location() {

        var hexvalues = [];

        var labelvalues = [];

        var PackageType = "";

        var PackageTypeName = "";

        $('.Location :selected').each(function (i, selectedElement) {

            hexvalues[i] = $(selectedElement).val();

            labelvalues[i] = $(selectedElement).text();

            debugger;

            PackageType = hexvalues[i] + "," + PackageType;

            PackageTypeName = labelvalues[i] + ", " + PackageTypeName;

        });

        $('#hdnLocation').val(PackageType);

    }

    $('#drpSpecialization').multiSelect();

    function SetSpecialization() {

        var hexvalues = [];

        var labelvalues = [];

        var Specializationtrick = "";

        var SetSpecializationName = "";

        $('.Specialization :selected').each(function (i, selectedElement) {

            hexvalues[i] = $(selectedElement).val();

            labelvalues[i] = $(selectedElement).text();

            debugger;

            Specializationtrick = hexvalues[i] + "," + Specializationtrick;

            SetSpecializationName = labelvalues[i] + ", " + SetSpecializationName;

        });

        $('#hdnSpecialization').val(Specializationtrick);

    }

    //if($("#drplocation").val())
    if ($("#drplocation option:selected").length) {
        $("#drplocation").trigger("change");
    }

    if ($("#drpSpecialization option:selected").length) {
        $("#drpSpecialization").trigger("change");
    }

    if ($("#drpTeamlead option:selected").length) {
        $("#drpTeamlead").trigger("change");
    }

</script>