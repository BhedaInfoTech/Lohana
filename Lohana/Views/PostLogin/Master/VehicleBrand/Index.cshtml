@model Lohana.Models.Master.VehicleBrandViewModel

<script src="~/Scripts/Common/generic.common.methods.js"></script>
<script src="~/Scripts/Master/VehicleBrand/vehicle-brand-event.js"></script>
<script src="~/Scripts/Master/VehicleBrand/vehicle-brand-method.js"></script>
<script src="~/Scripts/Master/VehicleBrand/vehicle-brand-validation.js"></script>
<script src="~/Scripts/Common/generic.common.events.js"></script>



<div class="content-area p-y-1">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <h4>Vehicle Brand</h4>
                    <ol class="breadcrumb no-bg m-b-1">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Vehicle Brand</a></li>
                        <li class="breadcrumb-item"><a href="#">Search</a></li>
                        <li class="breadcrumb-item active">Create</li>
                    </ol>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <h5 class="card-header">
                        <span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span>&nbsp; Vehicle Brand Create
                    </h5>
                    <form role="form" id="frmVehicleBrand">
                        <div class="card-block p-t-0 p-b-0">
                            <div class="row">
                                <div class="col-md-4">
                                    <label for="">Vehicle Brand Name</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Enter vehicle brand name" name="VehicleBrand.VehicleBrandName" id="txtVehicleBrandName" maxlength="10">
                                        <input type="hidden" class="form-control" id="hdnVehicleBrandName" name="VehicleBrand.VehicleBrandName">
                                        <span class="input-group-addon">
                                            <i class="fa fa-sort-alpha-asc"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label for="">Set Active</label>
                                    <div class="input-group">
                                        <input class="js-switch" data-color="#1bc044" checked="" data-switchery="true" value="true" name="VehicleBrand.IsActive" type="checkbox" id="Flag">
                                    </div>
                                </div>
                            </div>
                            <br />
                            <br />
                            <div class="row" style="text-align: center;">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <button type="button" id="btnSearchVehicleBrand" class="btn btn-purple btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-search"></i></span>Search</button>
                                        <button type="button" id="btnSaveVehicleBrand" class="btn btn-success btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button>
                                        <button type="reset" id="btnResetVehicleBrand" class="btn btn-warning btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    </div>
                <div class="card">
                    <h5 class="card-header">
                        <span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span>&nbsp; Vehicle Brand Listing
                    </h5>
                    <form role="form" id="frmVehicleBrand">
                        <input type="hidden" id="hdnVehicleBrandId" value="" name="Filter.VehicleBrandId" />
                        <div class="card-block p-t-0 p-b-0">
                            <div class="overflow-x-auto">
                                <table class="table m-b-0" id="tblVehicleBrand" data-current-page=""></table>
                            </div>
                        </div>
                    </form>
                </div>
                </div>
        </div>
</div>
</div>