
@model Lohana.Models.Master.VehicleTypeViewModel

<script src="~/Scripts/Common/generic.common.methods.js"></script>
<script src="~/Scripts/Master/VehicleType/vehicle-type-event.js"></script>
<script src="~/Scripts/Master/VehicleType/vehicle-type-method.js"></script>
<script src="~/Scripts/Master/VehicleType/vehicle-type-validation.js"></script>
<script src="~/Scripts/Common/generic.common.events.js"></script>


<div class="content-area p-y-1">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <h4>Vehicle Type</h4>
                    <ol class="breadcrumb no-bg m-b-1">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Vehicle Type</a></li>
                        <li class="breadcrumb-item"><a href="#">Search</a></li>
                        <li class="breadcrumb-item active">Create</li>
                    </ol>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <h5 class="card-header">
                        <span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span>&nbsp; Vehicle Type Create
                    </h5>
                    <form role="form" id="frmVehicleType">
                        <div class="card-block p-t-0 p-b-0">
                            <div class="row">
                                <div class="col-md-4">
                                    <label for="">Vehicle Type Name</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Enter vehicle type name" name="VehicleType.VehicleTypeName" id="txtVehicleTypeName" maxlength="30">
                                        <input type="hidden" class="form-control" id="hdnVehicleTypeName" name="VehicleType.VehicleTypeName">
                                        <span class="input-group-addon">
                                            <i class="fa fa-sort-alpha-asc"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label for="">Set Active</label>
                                    <div class="input-group">
                                        <input class="js-switch" data-color="#1bc044" checked="" data-switchery="true" value="true" name="VehicleType.IsActive" type="checkbox" id="Flag">
                                    </div>
                                </div>
                            </div>
                            <br />
                            <br />
                            <div class="row" style="text-align: center;">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <button type="button" id="btnSearchVehicleType" class="btn btn-purple btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-search"></i></span>Search</button>
                                        <button type="button" id="btnSaveVehicleType" class="btn btn-success btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button>
                                        <button type="reset" id="btnResetVehicleType" class="btn btn-warning btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card">
                    <h5 class="card-header">
                        <span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span>&nbsp; Vehicle Type Listing
                    </h5>
                    <form role="form" id="frmVehicleType">
                        <input type="hidden" id="hdnVehicleTypeId" value="" name="Filter.VehicleTypeId" />
                        <div class="card-block p-t-0 p-b-0">
                            <div class="overflow-x-auto">
                                <table class="table m-b-0" id="tblVehicleType" data-current-page=""></table>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
