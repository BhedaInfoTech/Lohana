@model Lohana.Models.Tariff.SupplierHotelTariff.SupplierHotelTariffViewModel

<script src="~/Scripts/SupplierHotelTariff/supplier-day-title-event.js"></script>
<script src="~/Scripts/SupplierHotelTariff/supplier-day-title-methods.js"></script>


<div class="tab-pane active p-a-0-75" id="gitdetails" role="tabpanel">

    <form id="frmDayDetails">
        <div class="row">
            <input type="hidden" id="hdnSupplierHotelDayId"name="SupplierHotelTariffDayInfo.SupplierHotelDayId" value="@Model.SupplierHotelTariffDayInfo.SupplierHotelDayId">
            <input type="hidden" id="hdnSupplierHotelId" name="SupplierHotelTariffDayInfo.SupplierHotelId" value="@Model.SupplierHotelTariffDayInfo.SupplierHotelId">

            <div class="col-md-4">
                <label for="drpCity" style="color: #333" class="">City</label>
                <div class="form-group">
                    <div class="input-group">
                        <select class="form-control" id="drpcity" name="SupplierHotelTariffDayInfo.CityId"></select>
                        <span class="input-group-addon">
                            <a href="/City/Index" target="_blank"> <i class="fa fa-globe"></i></a>
                        </span>
                    </div>
                </div>
                </div>


            <div class="col-md-4">
                <label for="">Title</label>
                <div class="input-group form-group">
                    <input type="text" class="form-control" placeholder="Enter Title" name="SupplierHotelTariffDayInfo.Title" id="txtTitle" maxlength="40">
                </div>
            </div>
        </div>

        <br />
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <div class="form-group">
                        <button type="button" id="btnSaveTitleDetails" class="btn btn-success btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button>
                        <button type="button" id="btnResetTitleDetails" class="btn btn-warning btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>
                    </div>
                </div>
                <div class="col-md-4"></div>
            </div>
        </div>

    </form>

</div>

