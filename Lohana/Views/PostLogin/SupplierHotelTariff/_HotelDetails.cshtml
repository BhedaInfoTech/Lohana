<script src="~/Scripts/SupplierHotelTariff/supplier-hotel-detail-method.js"></script>
<script src="~/Scripts/SupplierHotelTariff/supplier-hotel-detail-validations.js"></script>
<script src="~/Scripts/SupplierHotelTariff/supplier-hotel-detail-event.js"></script>

<form id="frmHotelDetail">
	<input type="hidden" id="hdnSupplierHotelDetailSupplierHotelId" value="0" name ="SupplierHotelDetail.SupplierHotelId" />
	<input type="hidden" id="hdnSupplierHotelDetailId" value="0" name="SupplierHotelDetail.SupplierHotelDetailId" />
	<div class="row">
		<div class="col-md-4">
			<label>City</label>
			<div class="form-group">
				<div class="input-group">
					<select class="form-control" id="drpLocation" name="SupplierHotelDetail.CityId">
					</select>
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<label for="">Hotel Name</label>
			<div class="form-group">
				<div class="input-group">
					<select id="drpHotel" class="form-control" name="SupplierHotelDetail.HotelId">
					</select>
				</div>
			</div>
		</div>

		<div class="col-md-4">
			<div class="form-group">
				<label>No of nights</label>
				<input id="txtTotalNights" type="text" class="form-control" placeholder="Enter no of nights" name="SupplierHotelDetail.TotalNights" maxlength="2">
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-4">
			<div class="form-group">
				<label>Room Type</label>
				<div class="input-group">
					<select class="form-control" id="drpRoomType" name="SupplierHotelDetail.RoomTypeId">
					</select>
				</div>
			</div>
		</div>

		<div class="col-md-4">
			<div class="form-group">
				<label>Meal Type</label>
				<div class="input-group">
					<select class="form-control" id="drpMeal" name="SupplierHotelDetail.MealId">
					</select>
				</div>
			</div>
		</div>

		<div class="col-md-4">
			<div class="form-group">
				<label>Meal Inclusions</label>
				<textarea id="txtMealInclusions" class="form-control" name="SupplierHotelDetail.MealInclusions" placeholder="Meal Inclusions"></textarea>
			</div>
		</div>
	</div>

	<div class="form-group">
		<button type="button" id="btnAddSupplierHotelDetail" class="btn btn-success btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button>
		<button type="reset" id="btnResetHotelDetail" class="btn btn-warning btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>
		<button type="button" id="btnDeleteHotelDetail" class="btn btn-danger btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light" disabled><span class="btn-label"><i class="ti-close"></i></span>Delete</button>
	</div>

	<div class="card">

		<h5 class="card-header">
			<span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span>&nbsp; Supplier Hotel Listing
		</h5>

		<div class="row">
			<div class="col-md-12">
				<div class="overflow-x-auto">
					<table class="table m-b-0" id="tblSupplierHotelDetails" data-current-page="0"></table>
				</div>
			</div>
		</div>

	</div>

	<div>
		<label id="lblMessage"></label>
	</div>
</form>