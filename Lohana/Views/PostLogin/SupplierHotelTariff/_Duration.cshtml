<form id="frmDuration">
	<div class="row">
		<div class="col-md-8">
			<label>From Date - To Date</label>
			<div class="form-group">
				<div class="input-daterange input-group from-to-date" id="date-range">
					<input id="txtFromDate" name="SupplierHotelDuration.FromDate" type="text" class="form-control" placeholder="From Date">
					<span class="input-group-addon bg-primary b-0 text-white">to</span>
					<input id="txtToDate" name="SupplierHotelDuration.ToDate" type="text" class="form-control" placeholder="To Date">
				</div>
			</div>
		</div>

	</div>

	<div class="row">
		<div class="col-md-12">
			<label>Select Days</label>
			<div class="form-group">

				<label class="custom-control custom-checkbox" style="display: none">
					<input name="SupplierHotelDuration.Day" type="checkbox" class="custom-control-input">
					<span class="custom-control-indicator"></span>
					<span class="custom-control-description">Mon</span>
				</label>

				<label class="custom-control custom-checkbox">
					<input type="checkbox" class="custom-control-input chkday" value="@Convert.ToInt32(LohanaBusinessEntities.Days.Monday)">
					<span class="custom-control-indicator"></span>
					<span class="custom-control-description">Mon</span>
				</label>

				<label class="custom-control custom-checkbox">
					<input type="checkbox" class="custom-control-input chkday" value="@Convert.ToInt32(LohanaBusinessEntities.Days.Tuesday)">
					<span class="custom-control-indicator"></span>
					<span class="custom-control-description">Tues</span>
				</label>

				<label class="custom-control custom-checkbox">
					<input type="checkbox" class="custom-control-input chkday" value="@Convert.ToInt32(LohanaBusinessEntities.Days.Wednesday)">
					<span class="custom-control-indicator"></span>
					<span class="custom-control-description">Wed</span>
				</label>

				<label class="custom-control custom-checkbox">
					<input type="checkbox" class="custom-control-input chkday" value="@Convert.ToInt32(LohanaBusinessEntities.Days.Thursday)">
					<span class="custom-control-indicator"></span>
					<span class="custom-control-description">Thur</span>
				</label>

				<label class="custom-control custom-checkbox">
					<input type="checkbox" class="custom-control-input chkday" value="@Convert.ToInt32(LohanaBusinessEntities.Days.Friday)">
					<span class="custom-control-indicator"></span>
					<span class="custom-control-description">Fri</span>
				</label>

				<label class="custom-control custom-checkbox">
					<input type="checkbox" class="custom-control-input chkday" value="@Convert.ToInt32(LohanaBusinessEntities.Days.Saturday)">
					<span class="custom-control-indicator"></span>
					<span class="custom-control-description">Sat</span>
				</label>

				<label class="custom-control custom-checkbox">
					<input type="checkbox" class="custom-control-input chkday" value="@Convert.ToInt32(LohanaBusinessEntities.Days.Sunday)">
					<span class="custom-control-indicator"></span>
					<span class="custom-control-description">Sun</span>
				</label>

			</div>

			<div class="dayErrorMsg" style="width: 100%; background: #f5f5f5; display: none">
				<label class="control-label" style="color: #d9534f; margin: 0;">Please select atleast one day. </label>
			</div>
		</div>
	</div>

	<div class="form-group">

		<button type="button" id="btnAddSupplierHotelDuration" class="btn btn-success btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button>
		<button type="reset" id="btnResetDuration" class="btn btn-warning btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>
		@*<button type="button" id="btnDeleteDuration" class="btn btn-danger btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light" disabled><span class="btn-label"><i class="ti-close"></i></span>Delete</button>*@


		@*<button type="button" id="btnAddSupplierHotelDuration" class="btn btn-info label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-check"></i></span>Add</button>
                                        <button type="button" id="btnResetDuration" class="btn btn-warning label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>*@
	</div>

	<div class="card">

		<h5 class="card-header">
			<span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span>&nbsp; Supplier Duration Listing
		</h5>

		<div class="row">
			<div class="col-md-12">
				<div class="overflow-x-auto">
					<table class="table m-b-0" id="tblPackageDetails" data-current-page="0"></table>
				</div>
			</div>
		</div>

	</div>

	<div>
		<label id="lblMessage"></label>
	</div>
</form>