@model Lohana.Models.SightSeeingTariff.SightSeeingTariffViewModel
@using LohanaBusinessEntities.Common;

<script src="~/Content/js/forms-pickers.js"></script>
<script type="text/javascript" src="~/Scripts/Common/generic.common.events.js"></script>
<script type="text/javascript" src="~/Scripts/Common/generic.common.methods.js"></script>

<script src="~/Scripts/Tariff/SightSeeingTariff/sight-seeing-tariff-duration-validations.js?v=@DateTime.Now"></script>
<script src="~/Scripts/Tariff/SightSeeingTariff/sight-seeing-tariff-duration-methods.js?v=@DateTime.Now"></script>
<script src="~/Scripts/Tariff/SightSeeingTariff/sight-seeing-tariff-duration-events.js?v=@DateTime.Now"></script>

<form id="frmSightSeeingTariffduration">

    <input type="hidden" id="hdnDurationSightSeeingTariffOccupancyId" name="SightSeeingTariffDuration.SightSeeingTariffOccupancyId" />
    <div class="box box-block bg-white">
        <div class="row">
            <h5 class="card-header">
                <span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span> &nbsp; Duration Details
            </h5>

            <div class="col-md-4">
                <label>Price</label>
                <div class="form-group">

                    <select class="form-control" id="txtSightSeeingTariffPrice" name="SightSeeingTariffDuration.SightSeeingTariffPriceId"></select>
                </div>



                <div class="form-group">
                    <label>From Date - To Date</label>
                    <div class="input-daterange input-group from-to-date" id="date-range">
                        <input type="text" class="form-control" id="txtFromDate" name="SightSeeingTariffDuration.FromDate" placeholder="From Date">
                        <span class="input-group-addon bg-primary b-0 text-white">to</span>
                        <input type="text" class="form-control" id="txtToDate" name="SightSeeingTariffDuration.ToDate" placeholder="To Date">
                    </div>
                </div>

                <div class="form-group">
                    <select class="form-control" id="drpAllWeekWeekEnd" name="SightSeeingTariffDuration.AllWeekWeekEnd">
                        <option value="none"> None</option>
                        <option value="all"> All</option>
                        <option value="weekend"> Weekend</option>
                        <option value="weekdays"> Weekdays</option>
                    </select>
                </div>

                <label>Operational Days</label>
                @foreach (var item in LookupInfo.GetDays())
                {
                    <div class="form-group">
                        <div class="input-group" id="">

                            <label class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" name="SightSeeingTariffDuration.OperationalDays" id="chkDays@(item.Value)" value="@item.Value">
                                <span class="custom-control-indicator"></span>
                                <span class="custom-control-description">@item.Value</span>
                            </label>

                        </div>

                    </div>


                }

            </div>

            <div class="col-md-8">

                <div id="dvcalendar1">
                </div>

            </div>

        </div>
    </div>

    <div class="box box-block bg-white">
        <div class="row">

            <h5 class="card-header">
                <span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span> &nbsp; Customer Category Listing
            </h5>

            <div class="col-md-12">
                <div class="card">
                    <div class="row">
                        <input type="hidden" id="hdnSearchSightSeeingTariffCustomerCategoryId" value="" name="SightSeeingTariffCustomerCategoryFilter.SightSeeingTariffCustomerCategoryId" />
                        <div class="col-md-12">
                            <div class="overflow-x-auto">
                                <table class="table m-b-0" id="tblSightSeeingTariffCustomerCategory">
                                    <thead class="thead-inverse">
                                        <tr>
                                            <th width="70px">Customer Category</th>
                                            <th width="70px">Margin</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <button type="button" id="btnAddSightSeeingTariffDuration" class="btn btn-success btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button>
                <button type="reset" id="btnResetSightSeeingTariffDuration" class="btn btn-warning btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>
            </div>
        </div>
    </div>

</form>