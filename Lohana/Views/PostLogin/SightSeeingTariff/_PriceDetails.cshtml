@model Lohana.Models.SightSeeingTariff.SightSeeingTariffViewModel
@using LohanaBusinessEntities.Common;

<link href="~/Content/plugin/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.min.css" rel="stylesheet" />

<script src="~/Content/plugin/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.min.js"></script>

<script src="~/Scripts/Tariff/SightSeeingTariff/sight-seeing-tariff-price-taxformula-validations.js"></script>

<script src="~/Scripts/Tariff/SightSeeingTariff/sight-seeing-tariff-price-taxformula-methods.js"></script>

<script src="~/Scripts/Tariff/SightSeeingTariff/sight-seeing-tariff-price-taxformula-events.js"></script>

<script src="~/Scripts/Tariff/SightSeeingTariff/sight-seeing-tariff-price-events.js"></script>

<script src="~/Scripts/Tariff/SightSeeingTariff/sight-seeing-tariff-price-methods.js"></script>

<form id="frmSightSeeingTariffPrice">
    <div class="row">
        <div class="calsection">
            <input type="hidden" id="hdnSightSeeingTariffDurationId" name="SightSeeingTariffPrice.SightSeeingTariffDurationId" />

            <input type="hidden" id="hdnSightSeeingTariffId" name="SightSeeingTariffPrice.SightSeeingTariffId" />

            <input type="hidden" id="hdnSightSeeingTariffOccupancyId" name="SightSeeingTariffPrice.SightSeeingTariffOccupancyId" />

            <input type="hidden" id="hdnSightSeeingTariffPriceId" name="SightSeeingTariffPrice.SightSeeingTariffPriceId" />

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="">Publish Price</label>
                        <input type="text" class="form-control publishprice" placeholder="Enter publish price" id="txtPublishPrice" name="SightSeeingTariffPrice.PublishPrice" data-chargeid="@Model.LstStandardCharges.Find(c => c.Abbreviation == "PP").ChargesId" data-isstandard="true">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Special Price</label>
                        <input type="text" id="txtSpecialPrice" class="form-control specialprice" name="SightSeeingTariffPrice.SpecialPrice" placeholder="Enter special price" data-chargeid="@Model.LstStandardCharges.Find(c => c.Abbreviation == "SP").ChargesId" data-isstandard="true">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Commission Price</label>
                        <input type="text" id="txtCommissionPrice" class="form-control commissionprice" name="SightSeeingTariffPrice.CommissionPrice" value="0" data-chargeid="@Model.LstStandardCharges.Find(c => c.Abbreviation == "CP").ChargesId" data-isstandard="true" readonly="readonly">
                    </div>
                </div>
            </div>
          
            <div class="row">
                <div class="col-md-4">
                    <label>Select Color</label>
                    <div class="input-group" id="dvColorPicker">
                        <input type="text" value="#f44236" class="form-control" name="SightSeeingTariffPrice.Color">
                        <span class="input-group-addon"><i></i></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Select Formula</label>
                        <select class="form-control" id="drpFormula">
                            <option value="0" selected>Select Charges</option>
                            @foreach (var item in Model.LstTaxFormula)
                            {
                                <option value="@item.TaxFormulaId">@item.TaxFormulaName</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="overflow-x-auto taxFormulaChargesGrid">

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="">Net Rate (SP + TT)</label>
                        <input type="text" id="txtNetRate" class="form-control netrate" value="0" name="SightSeeingTariffPrice.NetRate" readonly="readonly">
                    </div>
                </div>
            </div>

            <div class="row" style="text-align: center;">
                <div class="col-md-12">
                    <div class="form-group">
                        <button type="button" id="btnSaveSightSeeingTariffPrice" class="btn btn-success btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button>

                        <button type="button" id="btnSightSeeingTariffPriceDuration" class="btn btn-purple btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><span class="ti-time"></span></span>Duration</button>
                    </div>
                </div>
            </div>       


            </div>
        </div>

</form>

<div class="row">
    <div class="col-md-12" id="dvPriceListing">
    </div>
</div>