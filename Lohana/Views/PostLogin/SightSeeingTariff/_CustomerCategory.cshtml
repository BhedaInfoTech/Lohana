@model Lohana.Models.SightSeeingTariff.SightSeeingTariffViewModel
@using LohanaBusinessEntities.Common;


<form id="frmSightSeeingTariffCustomerCategory">
    <div class="box box-block bg-white">
        <div class="row">
            <div class="col-md-12">
                <table class="table m-md-b-0">
                    <thead class="thead-inverse">
                        <tr>
                            <th>#</th>
                            <th>CustomerCategoryName</th>
                            <th>Margin</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.SightSeeingTariffCustomerCategories.Count > 0)
                        {
                            foreach (var item in Model.SightSeeingTariffCustomerCategories)
                            {
                                <tr>
                                    <th>@item.CustomerCategoryId</th>
                                    <td>@item.CustomerCategoryName</td>
                                    <td>@item.TariffMargin</td>
                                </tr>
                            }
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</form>