@model Lohana.Models.Tariff.HotelTariff.HotelTariffViewModel
@using LohanaBusinessEntities.Common;

<script src="~/Scripts/Tariff/HotelTariff/hotel-tariff-room-occupancy-validations.js"></script>
<script src="~/Scripts/Tariff/HotelTariff/hotel-tariff-room-occupancy-methods.js"></script>
<script src="~/Scripts/Tariff/HotelTariff/hotel-tariff-room-occupancy-events.js"></script>

<form id="frmHotelTariffRoomOccupancy">

    <input type="hidden" id="hdnHotelTariffRoomOccupancyId" name="HotelTariffRoomOccupancy.HotelTariffRoomOccupancyId" />

    <input type="hidden" id="hdnHotelTariffRoomOccupancyDetailsId" name="HotelTariffRoomOccupancy.HotelTariffRoomDetailsId" />

    <div class="row">

        <div class="col-md-6">
            <div class="form-group">
                <label for="drpOccupancy" style="color: #333" class="">Occupancy</label>
                <div class="input-group">
                    <select class="form-control input-sm" id="drpOccupancy" name="HotelTariffRoomOccupancy.OccupancyId"></select>
                    <span class="input-group-addon">
                        <a href="/Occupancy/Index" target="_blank"><i class="fa fa-globe"></i></a>
                    </span>

                </div>
            </div>
        </div>

    </div>


    <div class="row" id="divAgeFromTo">

        <div class="col-md-6">
            <div class="form-group">
                <label for="">Age From</label>
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Enter age from" id="txtAgeFrom" name="HotelTariffRoomOccupancy.AgeFrom">
                    <span class="input-group-addon">
                        <i class="ti ti-calendar"></i>
                    </span>
                </div>
            </div>

        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Age To</label>
                <div class="input-group">
                    <input type="text" id="txtAgeTo" class="form-control" name="HotelTariffRoomOccupancy.AgeTo" placeholder="Enter age to">
                    <span class="input-group-addon">
                        <i class="ti ti-calendar"></i>
                    </span>
                </div>
            </div>
        </div>

    </div>

    <div class="row">

        <div class="col-md-6">
            <div class="form-group">
                <label for="drpMeal" style="color: #333" class="">Meal Type</label>
                <div class="input-group">
                    <select class="form-control input-sm" id="drpMeal" name="HotelTariffRoomOccupancy.MealId"></select>
                    <span class="input-group-addon">
                        <a href="/Meal/Index" target="_blank"><i class="fa fa-globe"></i></a>
                    </span>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>Extra Inclusions</label>
                <textarea id="txtMealInclusion" class="form-control" name="HotelTariffRoomOccupancy.MealInclusion" placeholder="Extra Inclusions"></textarea>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Room Inclusions</label>
                <textarea id="txtRoomInclusion" class="form-control" name="HotelTariffRoomOccupancy.RoomInclusion" placeholder="Room Inclusions"></textarea>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Room Exclusions</label>
                <textarea id="txtRoomExclusions" class="form-control" name="HotelTariffRoomOccupancy.RoomExclusion" placeholder="Room Exclusions"></textarea>
            </div>
        </div>
    </div>

    <div class="form-group">

        <button type="button" id="btnAddHotelTariffRoomOccupancy" class="btn btn-success btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button>
        <button type="reset" id="btnResetHotelTariffRoomOccupancy" class="btn btn-warning btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>
        <button type="button" id="btnDeleteHotelTariffRoomOccupancy" class="btn btn-danger btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light" disabled><span class="btn-label"><i class="ti-close"></i></span>Delete</button>

    </div>

    <div class="card">

        <h5 class="card-header">
            <span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span> &nbsp; Hotel Tariff Room Occupancy Listing
        </h5>

        <div class="row">
            <input type="hidden" id="hdnSearchHotelTariffRoomOccupancyId" value="" name="HotelTariffRoomOccupancyFilter.HotelTariffRoomOccupancyId" />
            <div class="card-block p-t-0 p-b-0">
                <div class="overflow-x-auto">
                    <table class="table m-b-0" id="tblHotelTariffRoomOccupancy"></table>
                </div>
            </div>
        </div>

    </div>


</form>