@model Lohana.Models.Tariff.HotelTariff.HotelTariffViewModel
@using LohanaBusinessEntities.Common;

<link href="../Content/plugin/clockpicker/dist/bootstrap-clockpicker.min.css" rel="stylesheet" />

<script src="../Content/plugin/clockpicker/dist/jquery-clockpicker.min.js"></script>

<script src="~/Content/js/forms-pickers.js"></script>

<script src="~/Scripts/Tariff/HotelTariff/hotel-tariff-room-validations.js"></script>
<script src="~/Scripts/Tariff/HotelTariff/hotel-tariff-room-methods.js"></script>
<script src="~/Scripts/Tariff/HotelTariff/hotel-tariff-room-events.js"></script>

<form id="frmHotelTariffRoom">

    <div class="row">

        <input type="hidden" id="hdnHotelTariffRoomDetailsId" name="HotelTariffRoom.HotelTariffRoomDetailsId" />

        <input type="hidden" id="hdnHotelTariffId" name="HotelTariffRoom.HotelTariffId" />

        <input type="hidden" id="hdnHotelTariffDurationDetailsIdId" name="HotelTariffRoom.HotelTariffDurationDetailsId" />

		<div class="col-md-3">
			<div class="form-group">
				<label>No of nights</label>
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="No of nights" name="HotelTariffRoom.NoOfNight" id="txtNoOfNight">
                    <span class="input-group-addon">
                        <i class="ti ti-time"></i>
                    </span>
                </div>
			</div>
		</div>

        <div class="col-md-3">
           
            <div class="form-group">
                <label>Room Rate Type</label>
                <div class="input-group">
                    <select id="drpRoomRateType" class="form-control input-sm" name="HotelTariffRoom.RoomRateTypeId">
                       <option value="0">Select Room Rate Type</option>
                        @foreach (var item in LookupInfo.GetRoomRateType())
                        {
                            if (Model.HotelTariffRoom.RoomRateTypeId == item.Key)
                            {
                                <option value="@item.Key" selected="selected">@item.Value</option>
                            }
                            else
                            {
                                <option value="@item.Key">@item.Value</option>
                            }
                        }

                    </select>
                    <span class="input-group-addon">
                        <i class="ti ti-time"></i>
                    </span>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>CheckIn Time</label>
                <div class="input-group clockpicker">
                    <input type="text" class="form-control" placeholder="Check in time" name="HotelTariffRoom.CheckInTime" id="txtCheckInTime">
                    <span class="input-group-addon">
                        <i class="ti ti-time"></i>
                    </span>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                <label>CheckOut Time</label>
                <div class="input-group clockpicker">
                    <input type="text" class="form-control" placeholder="Check out time" name="HotelTariffRoom.CheckOutTime" id="txtCheckOutTime">
                    <span class="input-group-addon">
                        <i class="ti ti-time"></i>
                    </span>
                </div>
            </div>
        </div> 

    </div>

    <div class="row">

        <div class="col-md-6">
            <div class="form-group">
                <label for="drpRoom" style="color: #333" class="">Room Type</label>
                <div class="input-group">
                    <select class="form-control input-sm" id="drpRoom" name="HotelTariffRoom.RoomTypeId">
                    </select>
                    <span class="input-group-addon">
                      <a href="/Hotel/Search" target="_blank"><i class="fa fa-globe"></i></a>
                    </span>

                </div>
            </div>
        </div> 

    </div>
  

    <div class="form-group">

        <button type="button" id="btnAddHotelTariffRoom" class="btn btn-success btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button>
        <button type="reset" id="btnResetHotelTariffRoom" class="btn btn-warning btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>
        <button type="button" id="btnDeleteHotelTariffRoom" class="btn btn-danger btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light" disabled><span class="btn-label"><i class="ti-close"></i></span>Delete</button>


        @*<button type="button" id="btnAddHotelTariffRoom" class="btn btn-info   label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-check"></i></span>Add</button>
        <button type="reset" id="" class="btn btn-warning label-left m-b-0-25 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>
        <button type="button" id="btnDeleteHotelTariffRoom" class="btn btn-danger label-left m-b-0-25 waves-effect waves-light" disabled><span class="btn-label"><i class="ti-reload"></i></span>Delete</button>*@
   
     </div>

    <div class="card">

        <h5 class="card-header">
            <span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span> &nbsp; Hotel Tariff Room Details Listing
        </h5>

        <div class="row">
            <input type="hidden" id="hdnSearchHotelTariffRoomDetailsId" value="" name="HotelTariffRoomFilter.HotelTariffRoomDetailsId" />
            <div class="card-block p-t-0 p-b-0">
                <div class="overflow-x-auto">
                    <table class="table m-b-0" id="tblHotelTariffRoomDetails"></table>
                </div>
            </div>
        </div>
       
    </div>

    <div>
        <label id="lblMessage"></label>
    </div>
           
</form>