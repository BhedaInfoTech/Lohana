<div class="row">
	<div class="col-md-3">
		<div class="form-group">
			<label>Source</label><input type="text" id="txtleavingFrom" class="form-control input-sm" name="Hotel.leavingFrom" placeholder="Enter Source">
		</div>
	</div>
	<div class="col-md-3">
		<div class="form-group">
			<label>Destination</label><input type="text" id="txtgoingTo" class="form-control input-sm" name="Hotel.goingTo" placeholder="Enter Destination">
		</div>
	</div>
	<div class="col-md-3">
		<div class="form-group">
			<label>Bus Type</label><select id="drpbusType" class="form-control input-sm" name="Hotel.busType">
				<option>-Select Bus Type-</option>
				<option>AC</option>
				<option>Non AC</option>
				<option>Volvo</option>
				<option>Sleeper</option>
			</select>
		</div>
	</div>

	<div class="col-md-2">
		<div class="form-group">
			<label>Departure Date</label><input type="text" id="dtpdepartDate" class="form-control input-sm datepicker" name="Hotel.departDate" placeholder="Enter Departure Date">
		</div>
	</div>
</div>

<div class="row">

	<div class="col-md-3">
		<div class="form-group">
			<label>Adults Count</label><input type="text" id="txtAdultCount" class="form-control input-sm" name="Hotel.adultCount" placeholder="Enter Adult count">
		</div>
	</div>
	<div class="col-md-3">
		<div class="form-group">
			<label>Children Count</label><input type="text" id="txtChildrenCount" class="form-control input-sm" name="Hotel.ChildrenCount" placeholder="Enter Children count">
		</div>
	</div>

	<div class="col-md-3">
		<div class="form-group">
			<label>Ticket Delivery</label>
			<select id="drppackageType" class="form-control input-sm" name="Hotel.packageType">
				<option value="">-Select Delivery Type-</option>
				<option value="">Email</option>
				<option value="">Office</option>
				<option value="">Courier</option>
			</select>
		</div>
	</div>

	<div class="col-md-2">
		<div class="form-group">
			<label>Budget</label>
			<input type="text" id="txtbudget" class="form-control input-sm" name="Hotel.budget" placeholder="Enter Budget">
		</div>
	</div>

	
</div>

