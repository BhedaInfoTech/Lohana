<script>
    $(document).ready(function () {
            
        $('#txtPaymentDate').datepicker('setDate', new Date());

        $('#txtChequeDate').datepicker('setDate', new Date());
        
            
        $("#drpPaymentMode").change(function () {
                      
            if ($(this).val() == 0) {
                $("#divBankName").hide();
                $("#divTransactionNo").hide();
                $("#divChequeDate").hide();
            }
            else if ($(this).val() == 1) {
                $("#divBankName").show();
                $("#divTransactionNo").show();
                $("#divChequeDate").hide();
            }
            else if ($(this).val() == 2) {
                $("#divBankName").show();
                $("#divTransactionNo").show();
                $("#divChequeDate").hide();
            }
            else if ($(this).val() == 3) {
                $("#divBankName").hide();
                $("#divTransactionNo").hide();
                $("#divChequeDate").hide();
            }
            else if ($(this).val() == 4) {
                $("#divBankName").show();
                $("#divTransactionNo").show();
                $("#divChequeDate").hide();
            }
            else if ($(this).val() == 5) {
                $("#divBankName").show();
                $("#divTransactionNo").show();
                $("#divChequeDate").show();
            }
        });



    });

</script>
