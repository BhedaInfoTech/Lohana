<div class="row">
   
    <div class="col-md-3">
        <div class="form-group">
            <label>Package Type</label>
            <select id="drphotelType" class="form-control input-sm" name="Package.hotelType">
                <option value="">Select Star</option>
                <option value="">5 Start </option>
                <option value="">4 Star </option>
                <option value="">3 Star </option>
            </select>
        </div>
    </div>

    <div class="col-md-3">
        <div class="form-group">
            <label>Room Type</label>
            <select id="drproomType" class="form-control input-sm" name="Package.roomType">
                <option value="">Select Room Type</option>
                <option value="">Double Bed Ac </option>
                <option value="">Double Bed Non Ac </option>
                <option value="">Single Bed Ac </option>
                <option value="">Single Bed Non Ac </option>
                <option value="">Dormetory </option>
            </select>
        </div>
    </div>

    <div class="col-md-3">
        <div class="form-group">
            <label>Room count</label>
            <input type="text" id="txtroomCount" class="form-control input-sm" name="Package.roomCount" placeholder="Room count">
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>Package Name</label>
            <input type="text" id="txtName" class="form-control input-sm" name="Package.Name" placeholder="Package Name">
        </div>
    </div>
</div>

<div class="row">


    <div class="col-md-6">
        <label>Check In Date - Check Out Date</label>
        <div class="input-daterange input-group from-to-date" id="date-range">
            <input type="text" class="form-control" name="start">
            <span class="input-group-addon bg-primary b-0 text-white">to</span>
            <input type="text" class="form-control" name="end">
        </div>
    </div>

    <div class="col-md-3">
        <div class="form-group">
            <label>Budget</label>
            <input type="text" id="txtbudget" class="form-control input-sm" name="Package.budget" placeholder="Enter Budget">
        </div>
    </div>


</div>


<script>


    $('.from-to-date').datepicker({
        toggleActive: true
    });

    $(".adult-children").TouchSpin({
        min: 0,
        max: 100,
        step: 1,
        decimals: 0,
        boostat: 5,
        maxboostedstep: 10,
        //postfix: '%',
        buttondown_class: "btn btn-secondary",
        buttonup_class: "btn btn-secondary"
    });


</script>

